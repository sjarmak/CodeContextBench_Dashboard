{
  "name": "@mosaicboard/studio-frontend",
  "version": "1.4.0",
  "private": true,
  "description": "Frontend dashboard for MosaicBoard Studio – a plug-and-play mosaic of real-time data, generative art, and C++/WASM tiles.",
  "author": "MosaicBoard Contributors",
  "license": "SEE LICENSE IN LICENSE.txt",
  "repository": {
    "type": "git",
    "url": "https://github.com/mosaicboard/mosaicboard-studio.git",
    "directory": "frontend"
  },
  "bugs": {
    "url": "https://github.com/mosaicboard/mosaicboard-studio/issues"
  },
  "keywords": [
    "dashboard",
    "svelte",
    "websocket",
    "wasm",
    "cpp",
    "data-visualization",
    "realtime"
  ],
  "engines": {
    "node": ">=18.16.0",
    "npm": ">=9.6.0"
  },
  "packageManager": "npm@9.6.7",
  "type": "module",
  "browserslist": [
    ">0.5%",
    "last 2 versions",
    "not dead",
    "not op_mini all"
  ],
  "workspaces": [
    "wasm"           /* C++ → WebAssembly build pipeline */
  ],

  "scripts": {
    "dev": "vite --open",
    "preview:local": "vite preview --host 0.0.0.0",
    "build": "run-s build:wasm build:client",
    "build:client": "vite build",
    "build:wasm": "npm --workspace wasm run compile",
    "serve": "vite preview",
    "clean": "rimraf dist .svelte-kit build",
    "lint": "eslint \"src/**/*.{ts,svelte}\" --max-warnings 0",
    "format": "prettier --write \"{src,tests}/**/*.{ts,svelte,js,css,scss}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "svelte-check --verbose",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "openapi:gen": "openapi-generator-cli generate -i https://api.mosaicboard.com/openapi.json -g typescript-axios -o src/api --skip-validate-spec",
    "prepare": "husky install",
    "postinstall": "node ./scripts/postinstall.mjs",          /* downloads protobuf schemas, fonts, etc. */
    "deploy": "npm run build && firebase deploy"
  },

  "dependencies": {
    "@floating-ui/dom": "^1.4.1",
    "@sveltejs/kit": "^2.0.5",
    "@tanstack/svelte-query": "^5.31.0",
    "axios": "^1.6.5",
    "classnames": "^2.3.2",
    "d3": "^7.8.5",
    "date-fns": "^2.30.0",
    "jwt-decode": "^4.0.0",
    "lodash-es": "^4.17.21",
    "notiflix": "^3.2.6",
    "protobufjs": "^7.2.4",
    "socket.io-client": "^4.7.2",
    "svelte": "^4.2.2",
    "three": "^0.158.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.2",
    "tailwindcss": "^3.4.0",
    "@tailwindcss/forms": "^0.5.4"
  },

  "devDependencies": {
    "@sveltejs/adapter-node": "^3.0.1",
    "@sveltejs/vite-plugin-svelte": "^3.1.0",
    "@storybook/addon-essentials": "^7.5.4",
    "@storybook/svelte": "^7.5.4",
    "@testing-library/svelte": "^4.1.5",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-plugin-svelte": "^2.32.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "npm-run-all": "^4.1.5",
    "openapi-generator-cli": "^6.6.0",
    "postcss": "^8.4.34",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "svelte-check": "^3.5.0",
    "sass": "^1.69.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.4",
    "vite-plugin-pwa": "^0.18.0",
    "vitest": "^1.2.3"
  },

  "lint-staged": {
    "*.{ts,svelte,js,css,scss}": [
      "prettier --write",
      "eslint --fix"
    ]
  },

  "config": {
    "apiBaseUrl": "https://api.mosaicboard.com/v1",
    "tileHotReloadPort": 5678      /* port the C++ runtime uses to notify the FE of new/updated tiles */
  }
}