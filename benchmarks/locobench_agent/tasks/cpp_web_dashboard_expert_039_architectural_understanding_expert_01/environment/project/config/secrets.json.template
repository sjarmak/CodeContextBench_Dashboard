{
  "_comment": "======================================================================\n  MosaicBoard Studio – Secrets Configuration Template (v1.0)\n  ------------------------------------------------------------------\n  NOTE:  •  Copy this file to   config/secrets.json   before building.\n         •  Replace every ${PLACEHOLDER} with a real, private value.\n         •  Never commit the populated file to version control.\n  ------------------------------------------------------------------\n  This file centralises all environment-specific secrets so that the\n  C++ application can load them at start-up via the SecureConfig\n  utility (src/core/security/SecureConfig.hpp).  The keys below are\n  referenced throughout the code-base using the dotted path notation\n  e.g.  SecureConfig::get<std::string>(\"database.password\").\n  ======================================================================",

  "environment": "development",

  "server": {
    "_comment": "HTTP/HTTPS listener settings",
    "host": "0.0.0.0",
    "port": 443,
    "session_secret": "${SESSION_SECRET}",          // 32+ random bytes
    "csrf_salt": "${CSRF_SALT}"                    // Optional extra salt
  },

  "database": {
    "_comment": "Primary relational DB (see Repository_Pattern layer)",
    "driver": "postgres",
    "host": "${DB_HOST}",
    "port": 5432,
    "name": "${DB_NAME}",
    "username": "${DB_USER}",
    "password": "${DB_PASSWORD}",
    "connection_pool": {
      "min": 2,
      "max": 10,
      "idle_timeout_seconds": 300
    },
    "ssl": {
      "enabled": true,
      "ca_cert_path": "${DB_CA_CERT_PATH}"
    }
  },

  "jwt": {
    "_comment": "Token-based authentication (Authentication_Middleware)",
    "issuer": "mosaicboard.studio",
    "audience": "mosaicboard.studio.users",
    "access_token_ttl_seconds": 900,       // 15 minutes
    "refresh_token_ttl_seconds": 1209600,  // 14 days
    "secret": "${JWT_SECRET}"              // 64+ random bytes
  },

  "oauth": {
    "_comment": "Social login providers (social_login)",
    "google": {
      "enabled": true,
      "client_id": "${GOOGLE_CLIENT_ID}",
      "client_secret": "${GOOGLE_CLIENT_SECRET}",
      "redirect_uri": "https://mosaicboard.studio/api/v1/auth/google/callback"
    },
    "github": {
      "enabled": false,
      "client_id": "${GITHUB_CLIENT_ID}",
      "client_secret": "${GITHUB_CLIENT_SECRET}",
      "redirect_uri": "https://mosaicboard.studio/api/v1/auth/github/callback"
    },
    "facebook": {
      "enabled": false,
      "app_id": "${FACEBOOK_APP_ID}",
      "app_secret": "${FACEBOOK_APP_SECRET}",
      "redirect_uri": "https://mosaicboard.studio/api/v1/auth/facebook/callback"
    }
  },

  "payment": {
    "_comment": "Payment gateway credentials (payment_processing)",
    "stripe": {
      "enabled": true,
      "public_key": "${STRIPE_PUBLIC_KEY}",
      "secret_key": "${STRIPE_SECRET_KEY}",
      "webhook_secret": "${STRIPE_WEBHOOK_SECRET}",
      "currency": "usd"
    }
  },

  "smtp": {
    "_comment": "Email delivery (notifications)",
    "host": "${SMTP_HOST}",
    "port": 587,
    "username": "${SMTP_USER}",
    "password": "${SMTP_PASS}",
    "starttls": true,
    "from_email": "no-reply@mosaicboard.studio",
    "from_name": "MosaicBoard Studio"
  },

  "cache": {
    "_comment": "Redis cache for session/caching layers",
    "type": "redis",
    "host": "${REDIS_HOST}",
    "port": 6379,
    "password": "${REDIS_PASSWORD}",
    "db": 0,
    "ttl_seconds": 300
  },

  "websocket": {
    "_comment": "SSL-secured WebSocket configuration",
    "path": "/ws",
    "ssl": {
      "certificate_path": "${SSL_CERT_PATH}",
      "private_key_path": "${SSL_PRIVATE_KEY_PATH}"
    },
    "allowed_origins": [
      "https://mosaicboard.studio",
      "https://staging.mosaicboard.studio"
    ]
  },

  "cdn": {
    "_comment": "Optional CDN for static assets & media-heavy tiles",
    "provider": "cloudflare",
    "api_token": "${CLOUDFLARE_API_TOKEN}",
    "zone_id": "${CLOUDFLARE_ZONE_ID}",
    "enabled": false
  },

  "sentry": {
    "_comment": "Error tracking (error_handling)",
    "dsn": "${SENTRY_DSN}",
    "environment": "production",
    "sample_rate": 0.75
  },

  "recaptcha": {
    "_comment": "Bot mitigation",
    "site_key": "${RECAPTCHA_SITE_KEY}",
    "secret_key": "${RECAPTCHA_SECRET_KEY}"
  }
}