{
  "name": "mosaicboard-studio",
  "version-string": "1.2.0",
  "description": "MosaicBoard Studio â€” A live C++ web-dashboard where every visual or data element is a plug-and-play tile.",
  "homepage": "https://github.com/mosaicboard/mosaicboard-studio",
  "license": "MIT",
  "authors": [
    "MosaicBoard Engineering Team"
  ],

  // Reference commit for reproducible builds (update via `vcpkg x-update-baseline`).
  "builtin-baseline": "3d761b5e4bb3d4ba3df686dcb7531cfab8bbf2ab",

  "dependencies": [
    // Networking & REST
    { "name": "crow",          "features": [ "ssl", "compression" ] },
    "boost-asio",
    "boost-beast",
    "websocketpp",

    // JSON / Serialization
    "nlohmann-json",
    "msgpack-c",

    // Security & Auth
    "openssl",
    "jwt-cpp",

    // Database & Storage
    "sqlite3",
    { "name": "libpqxx",       "features": [ "openssl" ] },

    // Logging / Diagnostics
    "spdlog",

    // Formatting / Utilities
    "fmt",
    "boost-uuid",

    // Concurrency / Task Scheduling
    { "name": "boost",         "default-features": false, "features": [ "atomic", "chrono", "thread", "filesystem" ] }
  ],

  "overrides": [
    // Pin specific versions for ABI stability across plugin boundaries.
    {
      "name": "crow",
      "version-string": "1.0.0"
    },
    {
      "name": "spdlog",
      "version-string": "1.12.0"
    },
    {
      "name": "fmt",
      "version-string": "10.2.1"
    }
  ],

  "features": {
    "dev-tools": {
      "description": "Extra utilities required only for local development and testing.",
      "dependencies": [
        "catch2",
        "cppcheck",
        "nlohmann-json-schema-validator"
      ]
    }
  }
}