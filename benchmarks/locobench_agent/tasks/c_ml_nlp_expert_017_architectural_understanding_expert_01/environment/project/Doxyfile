#---------------------------------------------------------------------------
# Project related configuration options
#---------------------------------------------------------------------------

# The PROJECT_NAME tag is a single word (or a sequence of words surrounded 
# by quotes) that should identify the project.
PROJECT_NAME           = "LexiLearn MVC Orchestrator (ml_nlp)"

# Brief description that is included at the top of every generated page.
PROJECT_BRIEF          = "Expert-level C-based machine-learning / NLP platform that enables universities and large K-12 districts to build, deploy, and continuously improve adaptive language-learning applications."

# Output directory into which all documentation is written.
OUTPUT_DIRECTORY       = docs

# If the CREATE_SUBDIRS tag is set to YES, then doxygen will create 4096 sub-
# directories (in 2 levels) under the output directory and distribute the 
# generated files over these directories.  
CREATE_SUBDIRS         = YES

#---------------------------------------------------------------------------
# Build related configuration options
#---------------------------------------------------------------------------

# The EXTRACT_ALL tag enables extraction of all entities, even undocumented 
# ones, ensuring comprehensive coverage of the code base.
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = YES
EXTRACT_STATIC         = YES
EXTRACT_LOCAL_CLASSES  = YES
EXTRACT_LOCAL_METHODS  = YES

# Set the source language.  The parser automatically recognizes .c/.h as C.
OPTIMIZE_OUTPUT_FOR_C  = YES
MARKDOWN_SUPPORT       = YES
AUTOLINK_SUPPORT       = YES

#---------------------------------------------------------------------------
# Repository layout / input configuration
#---------------------------------------------------------------------------

# Directories to be scanned for input files.  Add new modules here as the 
# project grows.
INPUT                  = \
    ../include \
    ../src \
    ../tests \
    ../cmake \
    ../scripts

# File patterns to consider when scanning the INPUT directory.
FILE_PATTERNS          = \
    *.c \
    *.h \
    *.h.in \
    *CMakeLists.txt \
    *.md \
    *.markdown

# Exclude generated code, third-party dependencies, or temporary build trees.
EXCLUDE_PATTERNS       = \
    */build/* \
    */third_party/* \
    */external/* \
    */.cache/*

#---------------------------------------------------------------------------
# Preprocessing
#---------------------------------------------------------------------------

# Enable the preprocessing step so that #ifdefs are evaluated, macros are 
# expanded, etc.
ENABLE_PREPROCESSING   = YES
MACRO_EXPANSION        = YES
EXPAND_ONLY_PREDEF     = NO

# Predefine macros that have impact on public API selection.
PREDEFINED             = \
    LEXILEARN_ML_NLP=1 \
    LEXILEARN_VERSION="\"1.0.0\"" \
    UNUSED(x)=x \
    NDEBUG

#---------------------------------------------------------------------------
# Dot / GraphViz integration
#---------------------------------------------------------------------------

# If the HAVE_DOT tag is set to YES, doxygen will assume the dot tool is 
# available from the path.  This tool is part of GraphViz.
HAVE_DOT               = YES
DOT_NUM_THREADS        = 4
DOT_IMAGE_FORMAT       = svg
DOT_GRAPH_MAX_NODES    = 80
INTERACTIVE_SVG        = YES
CALL_GRAPH             = YES
CALLER_GRAPH           = YES
GRAPHICAL_HIERARCHY    = YES
DOT_MULTI_TARGETS      = YES

#---------------------------------------------------------------------------
# Documentation output
#---------------------------------------------------------------------------

# Generate an index that can be searched via a JavaScript search box.
SEARCHENGINE           = YES

# Generate cross-referenced source code.
SOURCE_BROWSER         = YES
INLINE_SOURCES         = YES
STRIP_CODE_COMMENTS    = NO

#---------------------------------------------------------------------------
# HTML output
#---------------------------------------------------------------------------

GENERATE_HTML          = YES
HTML_OUTPUT            = html
HTML_DYNAMIC_SECTIONS  = YES
HTML_TIMESTAMP         = YES
HTML_COLORSTYLE        = LIGHT

#---------------------------------------------------------------------------
# LaTeX / PDF output
#---------------------------------------------------------------------------

GENERATE_LATEX         = YES
LATEX_OUTPUT           = latex
PDF_HYPERLINKS         = YES
USE_PDFLATEX           = YES
LATEX_BATCHMODE        = YES

#---------------------------------------------------------------------------
# Expert options
#---------------------------------------------------------------------------

# If enabled, dot graphs of inheritance / collaboration illustrate the 
# Factory, Strategy, Observer, and Pipeline patterns implemented in the
# LexiLearn code base.
EXTRA_PACKAGES         = \
    pipeline_pattern \
    strategy_pattern \
    factory_pattern \
    observer_pattern

# Enable grouping by CMake target (i.e., logical components).
BUILTIN_STL_SUPPORT    = YES
CLANG_ASSISTED_PARSING = YES

#---------------------------------------------------------------------------
# MISC
#---------------------------------------------------------------------------

# Set the tab size for source code representation.
TAB_SIZE               = 4

# Warn about undocumented entities.
WARN_IF_UNDOCUMENTED   = YES
WARN_IF_DOC_ERROR      = YES
WARN_NO_PARAMDOC       = NO
WARN_FORMAT            = "$file:$line: $text"

# Warn about obsolete or likely incorrect usage in Doxygen config itself.
WARN_FORMAT            = "$file:$line: $text"

# Enable use of MathJax for LaTeX formulas in HTML.
USE_MATHJAX            = YES
MATHJAX_RELPATH        = https://cdn.jsdelivr.net/npm/mathjax@3/es5

# End of Doxyfile