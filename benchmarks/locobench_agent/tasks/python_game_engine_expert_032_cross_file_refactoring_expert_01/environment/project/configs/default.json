{
  "engine": {
    "name": "LedgerQuest Engine",
    "version": "1.0.0",
    "description": "Default configuration for LedgerQuest Engine serverless game framework",
    "environment": "production",
    "telemetry": {
      "enabled": true,
      "provider": "aws-cloudwatch",
      "log_level": "INFO",
      "retention_days": 30
    }
  },
  "aws": {
    "region": "us-east-1",
    "account_id": "${AWS::AccountId}",
    "dynamodb": {
      "table_prefix": "lqe_",
      "billing_mode": "PAY_PER_REQUEST",
      "ttl_attribute": "expires_at"
    },
    "s3": {
      "asset_bucket": "lqe-assets-${AWS::AccountId}",
      "state_bucket": "lqe-state-${AWS::AccountId}",
      "encryption": "AES256"
    },
    "lambda": {
      "runtime": "python3.11",
      "memory": 1024,
      "timeout": 30,
      "architecture": "arm64",
      "layers": [
        "arn:aws:lambda:${aws.region}:${aws.account_id}:layer:ledgerquest-shared:1"
      ],
      "provisioned_concurrency": 0
    },
    "fargate": {
      "task_cpu": 4096,
      "task_memory": 8192,
      "gpu": {
        "enabled": true,
        "count": 1,
        "type": "g4dn.xlarge"
      }
    },
    "eventbridge": {
      "bus_name": "ledgerquest-bus",
      "archive_name": "ledgerquest-archive",
      "retention_days": 90
    }
  },
  "game_loop": {
    "tick_rate": 60,
    "max_delta": 0.333,
    "systems": [
      "physics",
      "ai",
      "command",
      "render",
      "audio"
    ]
  },
  "ecs": {
    "component_registry": [
      "Transform",
      "Rigidbody",
      "Sprite",
      "AudioSource",
      "Script",
      "NetworkIdentity"
    ],
    "default_components": {
      "Transform": {
        "position": [0, 0, 0],
        "rotation": [0, 0, 0],
        "scale": [1, 1, 1]
      },
      "Rigidbody": {
        "mass": 1,
        "drag": 0,
        "angularDrag": 0.05
      }
    }
  },
  "physics": {
    "solver_iterations": 10,
    "gravity": [0, -9.81, 0],
    "collision_layers": {
      "default": 1,
      "ui": 2,
      "trigger": 4
    }
  },
  "ai": {
    "behaviour_tree_cache": {
      "max_items": 2000,
      "eviction_policy": "LRU"
    },
    "blackboard_default_ttl": 300
  },
  "scripting": {
    "allowed_imports": [
      "math",
      "random",
      "datetime"
    ],
    "max_execution_time_ms": 50,
    "max_memory_kb": 512
  },
  "security": {
    "multi_tenant": true,
    "data_isolation_strategy": "partition",
    "audit_log": {
      "enabled": true,
      "kinesis_stream": "ledgerquest-audit",
      "retention_days": 365
    },
    "rate_limits": {
      "websocket_messages_per_second": 200,
      "http_requests_per_minute": 1000
    }
  },
  "feature_flags": {
    "level_editor": true,
    "experimental_physics_v2": false,
    "dynamic_asset_streaming": true
  },
  "metering": {
    "enabled": true,
    "collector_lambda": "lqe-metering-collector",
    "sample_rate": 1
  },
  "client": {
    "max_packet_size_kb": 32,
    "compression": "gzip",
    "encryption": {
      "enabled": true,
      "algorithm": "AES-256-GCM"
    }
  },
  "deployment": {
    "ci_cd": {
      "provider": "github-actions",
      "workflow_file": ".github/workflows/deploy.yml"
    },
    "tags": {
      "Project": "LedgerQuestEngine",
      "Environment": "${self:custom.stage}"
    }
  }
}