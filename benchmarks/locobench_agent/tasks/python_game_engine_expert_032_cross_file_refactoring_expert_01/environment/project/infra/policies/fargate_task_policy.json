  "Version": "2012-10-17",
  "Statement": [
    //------------------------------------------------------------
    //  ███████╗ █████╗ ██████╗  █████╗  ██████╗ ████████╗███████╗
    //  ██╔════╝██╔══██╗██╔══██╗██╔══██╗██╔════╝ ╚══██╔══╝██╔════╝
    //  ███████╗███████║██████╔╝███████║██║  ███╗   ██║   █████╗  
    //  ╚════██║██╔══██║██╔═══╝ ██╔══██║██║   ██║   ██║   ██╔══╝  
    //  ███████║██║  ██║██║     ██║  ██║╚██████╔╝   ██║   ███████╗
    //  ╚══════╝╚═╝  ╚═╝╚═╝     ╚═╝  ╚═╝ ╚═════╝    ╚═╝   ╚══════╝
    //
    //  LedgerQuest Engine – Fargate Task Execution Policy
    //------------------------------------------------------------
    //  This AWS IAM policy grants the minimum set of permissions
    //  required for container tasks executed via AWS Fargate to
    //  interact with LedgerQuest’s serverless infrastructure.
    //
    //  Areas covered:
    //  • ECR (pull container images)
    //  • CloudWatch Logs (stream task logs)
    //  • DynamoDB & S3 (read / write game state & assets)
    //  • EventBridge (emit domain events)
    //  • Parameter Store & Secrets Manager (fetch runtime config)
    //  • X-Ray (distributed tracing)
    //  • KMS (decrypt encrypted parameters / secrets)
    //  • CloudWatch Metrics (publish custom usage metrics)
    //------------------------------------------------------------
    {
      "Sid": "EcrRead",
      "Effect": "Allow",
      "Action": [
        "ecr:GetDownloadUrlForLayer",
        "ecr:BatchGetImage",
        "ecr:BatchCheckLayerAvailability"
      ],
      "Resource": "arn:aws:ecr:*:*:repository/ledgerquest/*"
    },
    {
      "Sid": "EcrAuth",
      "Effect": "Allow",
      "Action": "ecr:GetAuthorizationToken",
      "Resource": "*"
    },
    {
      "Sid": "CloudWatchLogs",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogStream",
        "logs:CreateLogGroup",
        "logs:PutLogEvents",
        "logs:DescribeLogStreams"
      ],
      "Resource": [
        "arn:aws:logs:*:*:log-group:/aws/ecs/ledgerquest/*"
      ]
    },
    {
      "Sid": "DynamoDBCrud",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:UpdateItem",
        "dynamodb:BatchGetItem",
        "dynamodb:BatchWriteItem",
        "dynamodb:Query",
        "dynamodb:Scan"
      ],
      "Resource": [
        "arn:aws:dynamodb:*:*:table/ledgerquest-*"
      ]
    },
    {
      "Sid": "S3Access",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::ledgerquest-assets-prod",
        "arn:aws:s3:::ledgerquest-assets-prod/*",
        "arn:aws:s3:::ledgerquest-saves-*",
        "arn:aws:s3:::ledgerquest-saves-*/*"
      ]
    },
    {
      "Sid": "EventBridgePutEvents",
      "Effect": "Allow",
      "Action": "events:PutEvents",
      "Resource": "arn:aws:events:*:*:event-bus/ledgerquest-bus"
    },
    {
      "Sid": "ParameterStoreRead",
      "Effect": "Allow",
      "Action": [
        "ssm:GetParameters",
        "ssm:GetParameter",
        "ssm:GetParametersByPath"
      ],
      "Resource": [
        "arn:aws:ssm:*:*:parameter/ledgerquest/*"
      ]
    },
    {
      "Sid": "SecretsManagerRead",
      "Effect": "Allow",
      "Action": [
        "secretsmanager:GetSecretValue"
      ],
      "Resource": [
        "arn:aws:secretsmanager:*:*:secret:ledgerquest/*"
      ]
    },
    {
      "Sid": "KMSDecrypt",
      "Effect": "Allow",
      "Action": [
        "kms:Decrypt",
        "kms:Encrypt",
        "kms:GenerateDataKey"
      ],
      "Resource": [
        "arn:aws:kms:*:*:key/*"
      ],
      "Condition": {
        "StringLike": {
          "kms:EncryptionContext:aws:ssm:parameter-name": "ledgerquest/*"
        }
      }
    },
    {
      "Sid": "XRayTracing",
      "Effect": "Allow",
      "Action": [
        "xray:PutTraceSegments",
        "xray:PutTelemetryRecords"
      ],
      "Resource": [
        "arn:aws:xray:*:*:group/*",
        "arn:aws:xray:*:*:sampling-rule/*"
      ]
    },
    {
      "Sid": "CloudWatchMetrics",
      "Effect": "Allow",
      "Action": "cloudwatch:PutMetricData",
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "cloudwatch:namespace": "LedgerQuest/Usage"
        }
      }
    }
  ]
}