```java
package com.wellsphere.connect.service.location;

import android.Manifest;
import android.app.Notification;
import android.app.NotificationChannel;
import android.app.NotificationManager;
import android.app.Service;
import android.content.Context;
import android.content.Intent;
import android.content.pm.PackageManager;
import android.location.Location;
import android.os.Binder;
import android.os.Build;
import android.os.IBinder;
import android.os.Looper;

import androidx.annotation.NonNull;
import androidx.annotation.Nullable;
import androidx.core.app.ActivityCompat;
import androidx.core.app.NotificationCompat;
import androidx.lifecycle.LifecycleService;
import androidx.lifecycle.LiveData;
import androidx.lifecycle.MutableLiveData;

import com.google.android.gms.location.FusedLocationProviderClient;
import com.google.android.gms.location.LocationCallback;
import com.google.android.gms.location.LocationRequest;
import com.google.android.gms.location.LocationResult;
import com.google.android.gms.location.LocationServices;
import com.wellsphere.connect.R; // App-level resources

import java.util.concurrent.ExecutorService;
import java.util.concurrent.Executors;

/**
 * Foreground service responsible for streaming high-accuracy location updates to the rest of the
 * WellSphere Connect stack.  The service is lifecycle-aware (extends {@link LifecycleService}) and
 * exposes a {@link LiveData} source that view models can observe without risking memory leaks.
 *
 * Architectural notes:
 * • MVVM: ViewModels subscribe to {@link #getLocationLiveData()} for deterministic rendering.
 * • Repository Pattern: Persists each location sample to the {@link LocationRepository}.
 * • Observer Pattern: Clients bind via {@link LocalBinder} or observe LiveData.
 *
 * Call sequence:
 * 1)   startService(new Intent(...))   -> onCreate() → configure + define callback
 * 2)   service.startTracking()         → checks permission & enters foreground
 * 3)   onLocationResult()              → broadcasts + persists
 *
 * Permissions:
 *  • android.permission.ACCESS_FINE_LOCATION
 *  • android.permission.ACCESS_COARSE_LOCATION
 *
 * The caller is responsible for requesting runtime permissions **before** calling
 * {@link #startTracking()}.
 */
@SuppressWarnings("MissingPermission") // All permission checks are done at runtime.
public class LocationTrackingService extends LifecycleService {

    /* ---------- Constants ---------- */
    private static final String NOTIFICATION_CHANNEL_ID = "wellsphere_location_channel";
    private static final int NOTIFICATION_ID = 0xBEEF; // Arbitrary unique integer
    private static final long UPDATE_INTERVAL_MS = 10_000L;     // 10 seconds
    private static final long FASTEST_INTERVAL_MS = 5_000L;     // 5 seconds

    /* ---------- Android Components ---------- */
    private FusedLocationProviderClient fusedLocationProvider;
    private LocationCallback fusedLocationCallback;
    private LocationRequest locationRequest;

    /* ---------- State ---------- */
    private final MutableLiveData<Location> locationLiveData = new MutableLiveData<>();
    private final IBinder localBinder = new LocalBinder();
    private final ExecutorService persistenceExecutor = Executors.newSingleThreadExecutor();

    /* ---------- External Dependencies ---------- */
    private LocationRepository locationRepository;

    /* ========================================================================================= */
    /*                                           Binder                                          */
    /* ========================================================================================= */

    /**
     * Simple binder giving in-process clients access to public methods.
     */
    public class LocalBinder extends Binder {
        public LocationTrackingService getService() {
            return LocationTrackingService.this;
        }
    }

    /* ========================================================================================= */
    /*                                LifecycleService overrides                                 */
    /* ========================================================================================= */

    @Override
    public void onCreate() {
        super.onCreate();
        fusedLocationProvider = LocationServices.getFusedLocationProviderClient(this);
        locationRepository = LocationRepository.getInstance(getApplicationContext());
        configureLocationRequest();
        configureLocationCallback();
    }

    @Nullable
    @Override
    public IBinder onBind(@NonNull Intent intent) {
        // Makes LiveData active when a component binds.
        return localBinder;
    }

    @Override
    public boolean onUnbind(Intent intent) {
        // Keeps service alive even when no clients are bound.
        return true;
    }

    @Override
    public void onDestroy() {
        stopTracking();        // Remove callbacks & background thread
        persistenceExecutor.shutdown();
        super.onDestroy();
    }

    /* ========================================================================================= */
    /*                                   Public API                                              */
    /* ========================================================================================= */

    /**
     * Starts foreground location tracking.  Throws {@link SecurityException} if the calling
     * component did not obtain location permission beforehand.
     */
    public synchronized void startTracking() {
        ensureLocationPermission();
        if (isTracking()) {
            return; // Already running
        }
        startForegroundInternal();
        fusedLocationProvider.requestLocationUpdates(
                locationRequest,
                fusedLocationCallback,
                Looper.getMainLooper()
        );
    }

    /**
     * Stops tracking and relinquishes foreground status.
     */
    public synchronized void stopTracking() {
        if (!isTracking()) {
            return;
        }
        fusedLocationProvider.removeLocationUpdates(fusedLocationCallback);
        stopForeground(Service.STOP_FOREGROUND_REMOVE);
    }

    /**
     * Returns true if the service is currently registered for location updates.
     */
    public boolean isTracking() {
        return fusedLocationCallback != null
                && ActivityCompat.checkSelfPermission(this, Manifest.permission.ACCESS_FINE_LOCATION)
                == PackageManager.PERMISSION_GRANTED;
    }

    /**
     * LiveData stream that emits a new {@link Location} every time
     * {@link #fusedLocationCallback} receives an update.
     */
    public LiveData<Location> getLocationLiveData() {
        return locationLiveData;
    }

    /* ========================================================================================= */
    /*                                 Internal setup helpers                                    */
    /* ========================================================================================= */

    private void configureLocationRequest() {
        locationRequest = LocationRequest.create()
                .setInterval(UPDATE_INTERVAL_MS)
                .setFastestInterval(FASTEST_INTERVAL_MS)
                .setPriority(LocationRequest.PRIORITY_HIGH_ACCURACY)
                .setMaxWaitTime(UPDATE_INTERVAL_MS * 2); // Batch when possible to save battery
    }

    private void configureLocationCallback() {
        fusedLocationCallback = new LocationCallback() {
            @Override
            public void onLocationResult(@NonNull LocationResult result) {
                for (Location location : result.getLocations()) {
                    onNewLocation(location);
                }
            }
        };
    }

    private void onNewLocation(@NonNull Location location) {
        // 1. Update in-memory observers
        locationLiveData.postValue(location);

        // 2. Persist asynchronously
        persistenceExecutor.execute(() ->
                locationRepository.saveLocationSample(location));
    }

    /* ========================================================================================= */
    /*                            Foreground & Permission handling                               */
    /* ========================================================================================= */

    private void ensureLocationPermission() {
        boolean fine = ActivityCompat.checkSelfPermission(
                this, Manifest.permission.ACCESS_FINE_LOCATION)
                == PackageManager.PERMISSION_GRANTED;
        boolean coarse = ActivityCompat.checkSelfPermission(
                this, Manifest.permission.ACCESS_COARSE_LOCATION)
                == PackageManager.PERMISSION_GRANTED;

        if (!fine && !coarse) {
            throw new SecurityException("Location permission not granted");
        }
    }

    private void startForegroundInternal() {
        NotificationManager nm =
                (NotificationManager) getSystemService(Context.NOTIFICATION_SERVICE);

        if (nm != null && Build.VERSION.SDK_INT >= Build.VERSION_CODES.O
                && nm.getNotificationChannel(NOTIFICATION_CHANNEL_ID) == null) {

            NotificationChannel channel = new NotificationChannel(
                    NOTIFICATION_CHANNEL_ID,
                    "WellSphere Location",
                    NotificationManager.IMPORTANCE_LOW
            );
            channel.setDescription("Background location tracking for wellness activities");
            nm.createNotificationChannel(channel);
        }

        Notification notification = new NotificationCompat.Builder(
                this, NOTIFICATION_CHANNEL_ID)
                .setContentTitle("WellSphere is tracking your activity")
                .setContentText("Location tracking is active")
                .setSmallIcon(R.drawable.ic_location_on_24) // vector drawable in res/
                .setPriority(NotificationCompat.PRIORITY_LOW)
                .setCategory(NotificationCompat.CATEGORY_SERVICE)
                .setOngoing(true)
                .build();

        startForeground(NOTIFICATION_ID, notification);
    }

    /* ========================================================================================= */
    /*                               Repository (Dummy Stub)                                     */
    /* ========================================================================================= */

    /**
     * A minimal stub representing the data layer.  In the real project this lives under
     * com.wellsphere.connect.repository and uses Room, encrypted SQLite, or a remote API.
     * The stub is included here so that the file is self-contained and compile-time complete.
     */
    public interface LocationRepository {
        /**
         * Persists a single {@link Location} instance.
         *
         * Because persistence may involve I/O or network calls, the implementation MUST be
         * non-blocking (i.e., called on a background thread).
         */
        void saveLocationSample(@NonNull Location location);

        /**
         * Factory method for obtaining the singleton instance.  In production, this is usually
         * satisfied by a Dependency Injection container (e.g., Hilt, Dagger) rather than a
         * manual getInstance() call.
         */
        @NonNull
        static LocationRepository getInstance(@NonNull Context context) {
            return LazyHolder.INSTANCE;
        }

        /* ---------------------------------- Holder ---------------------------------- */
        class LazyHolder {
            private static final LocationRepository INSTANCE = new NoOpRepository();

            private LazyHolder() {
            }
        }

        /* ------------------------------ Fallback impl -------------------------------- */
        class NoOpRepository implements LocationRepository {
            @Override
            public void saveLocationSample(@NonNull Location location) {
                // Intentionally no-op. Replace with Room/Firestore/S3/etc.
            }
        }
    }
}
```