<?xml version="1.0" encoding="utf-8"?>
<!--
    WellSphere Connect
    strings.xml – Centralized string resources.
    -----------------------------------------------------------------------------
    NOTES FOR TRANSLATORS:
    • Keep placeholders (e.g. %1$s, %2$d) in the same order.
    • Do not translate values marked with translatable="false".
    • Strings with the prefix 'pref_' are used in preference / settings screens.
    • Strings with the suffix '_content_description' are used by accessibility
      services (screen readers).  Keep them concise but descriptive.
-->
<resources>

    <!-- ---------------------------------------------------------------------
         Application-level
    ---------------------------------------------------------------------- -->
    <string name="app_name" translatable="false">WellSphere Connect</string>
    <string name="app_tagline">Collaborative care in your pocket</string>

