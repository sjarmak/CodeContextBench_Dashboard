<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--
        Data-binding root for MVVM. The FeedPost model represents an immutable
        domain object produced by the Repository layer, while PostCallbacks is an
        interface implemented by the ViewModel (or main activity/fragment) that
        consumes user intents emitted from this item view.
    -->
    <data>
        <import type="android.view.View" />
        <variable
            name="post"
            type="com.wellsphere.connect.domain.model.FeedPost" />
        <variable
            name="callbacks"
            type="com.wellsphere.connect.ui.feed.PostCallbacks" />
    </data>

    <!--
        Post item layout used by RecyclerView.Adapter.
        Uses ConstraintLayout for performance and flexibility.
    -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPostRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="16dp">

        <!-- Author avatar -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_avatar_placeholder"
            app:imageUrl="@{post.authorAvatarUrl}" />

        <!-- Display name -->
        <TextView
            android:id="@+id/tvDisplayName"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{post.authorDisplayName}"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/ivPrivacy"
            app:layout_constraintStart_toEndOf="@id/ivAvatar"
            app:layout_constraintTop_toTopOf="@id/ivAvatar"
            app:layout_constrainedWidth="true" />

        <!-- Privacy icon (e.g., public / friends-only) -->
        <ImageView
            android:id="@+id/ivPrivacy"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription="@string/privacy_level"
            android:tint="?android:attr/textColorSecondary"
            app:layout_constraintBaseline_toBaselineOf="@id/tvDisplayName"
            app:layout_constraintEnd_toEndOf="parent"
            app:privacyIcon="@{post.privacyLevel}" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/tvTimestamp"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{post.relativeTimestamp}'
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintStart_toStartOf="@id/tvDisplayName"
            app:layout_constraintTop_toBottomOf="@id/tvDisplayName" />

        <!-- Location tag (gone when location absent) -->
        <TextView
            android:id="@+id/tvLocation"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_location_on_12"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text='@{post.locationName}'
            android:textColor="?android:attr/textColorSecondary"
            android:visibility='@{post.hasLocation() ? View.VISIBLE : View.GONE}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tvTimestamp" />

        <!-- Post textual body -->
        <TextView
            android:id="@+id/tvBody"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="8"
            android:text="@{post.body}"
            android:textColor="?android:attr/textColorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvDisplayName"
            app:layout_constraintTop_toBottomOf="@id/tvTimestamp" />

        <!-- Optional image attachment (gone when missing) -->
        <ImageView
            android:id="@+id/ivAttachment"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/post_attachment"
            android:scaleType="centerCrop"
            android:visibility='@{post.imageUrl != null ? View.VISIBLE : View.GONE}'
            app:imageUrl="@{post.imageUrl}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvBody"
            app:layout_constraintTop_toBottomOf="@id/tvBody" />

        <!-- Horizontal divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvBody"
            app:layout_constraintTop_toBottomOf="@+id/ivAttachment"
            android:visibility="@{post.imageUrl != null ? View.VISIBLE : View.GONE}" />

        <!-- Action bar: Like · Comment · Share -->
        <LinearLayout
            android:id="@+id/llActions"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvBody"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <ImageButton
                android:id="@+id/btnLike"
                style="?attr/actionIconStyle"
                android:contentDescription="@string/like"
                android:src="@drawable/ic_thumb_up_24"
                android:tint='@{post.isLiked ? @color/colorAccent : ?android:attr/textColorSecondary}'
                android:onClick='@{() -> callbacks.onLike(post)}' />

            <TextView
                android:id="@+id/tvLikeCount"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_marginEnd="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{String.valueOf(post.likeCount)}'
                android:textColor="?android:attr/textColorSecondary" />

            <ImageButton
                android:id="@+id/btnComment"
                style="?attr/actionIconStyle"
                android:contentDescription="@string/comment"
                android:src="@drawable/ic_comment_24"
                android:tint="?android:attr/textColorSecondary"
                android:onClick='@{() -> callbacks.onComment(post)}' />

            <TextView
                android:id="@+id/tvCommentCount"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_marginEnd="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{String.valueOf(post.commentCount)}'
                android:textColor="?android:attr/textColorSecondary" />

            <ImageButton
                android:id="@+id/btnShare"
                style="?attr/actionIconStyle"
                android:contentDescription="@string/share"
                android:src="@drawable/ic_share_24"
                android:tint="?android:attr/textColorSecondary"
                android:onClick='@{() -> callbacks.onShare(post)}' />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>