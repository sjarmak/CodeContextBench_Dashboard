<?xml version="1.0" encoding="utf-8"?>
<!--
    WellSphere Connect
    styles.xml
    ----------------------------------------------------------------------------
    Central styling definitions for the WellSphere Connect Android client.

    • Material3 with dynamic color & dark-theme support
    • Explicit style overlays for Biometric dialogs, Location permission sheets, etc.
    • Custom text appearances and widget decorations to promote a cohesive brand
    • All widget-level styles inherit from the base theme to guarantee consistency.

    NOTE:
    ‑ Most color references point to values defined in colors.xml (not shown here).
    ‑ Dimensions and fonts live in dimens.xml and font resources, respectively.
    ----------------------------------------------------------------------------
-->
<resources>

    <!-- =======================  BASE APP THEMES  ===========================-->

    <!-- Base application theme (DayNight) -->
    <style name="Theme.WellSphereConnect" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <!-- Core brand colors -->
        <item name="colorPrimary">@color/ws_primary</item>
        <item name="colorOnPrimary">@color/ws_on_primary</item>
        <item name="colorSecondary">@color/ws_secondary</item>
        <item name="colorOnSecondary">@color/ws_on_secondary</item>
        <item name="colorTertiary">@color/ws_tertiary</item>
        <item name="colorError">@color/ws_error</item>

        <!-- Surfaces -->
        <item name="colorSurface">@color/ws_surface</item>
        <item name="colorSurfaceVariant">@color/ws_surface_variant</item>
        <item name="colorOnSurface">@color/ws_on_surface</item>

        <!-- Status & navigation bar -->
        <item name="android:statusBarColor">@color/ws_status_bar</item>
        <item name="android:navigationBarColor">@color/ws_nav_bar</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>

        <!-- Typography -->
        <item name="fontFamily">@font/poppins_regular</item>

        <!-- Component styles -->
        <item name="buttonStyle">@style/Widget.WellSphereConnect.Button.Primary</item>
        <item name="textInputStyle">@style/Widget.WellSphereConnect.TextInputLayout</item>
        <item name="chipStyle">@style/Widget.WellSphereConnect.Chip.Filter</item>
        <item name="toolbarStyle">@style/Widget.WellSphereConnect.Toolbar</item>

        <!-- Dialog corner radius for Material3 -->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.WellSphereConnect.MediumComponent</item>
    </style>

    <!-- Theme used while biometric prompt is showing to hide app bar and nav bar -->
    <style name="ThemeOverlay.WellSphereConnect.BiometricDialog" parent="ThemeOverlay.Material3">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorSurface">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Theme for full-screen crash reporter Activity to avoid recursive crashes -->
    <style name="Theme.WellSphereConnect.CrashReporter" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ws_error</item>
        <item name="colorOnPrimary">@color/ws_on_error</item>
        <item name="android:windowBackground">@color/ws_surface</item>
        <item name="android:statusBarColor">@color/ws_error_dark</item>
        <!-- Disable dynamic colors to minimise unknown states -->
        <item name="enableEdgeToEdge">false</item>
    </style>

    <!-- ===================  WIDGET-LEVEL CUSTOM STYLES  ====================-->

    <!-- Primary filled button -->
    <style name="Widget.WellSphereConnect.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:minHeight">@dimen/ws_button_height</item>
        <item name="android:minWidth">@dimen/ws_button_min_width</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="shapeAppearance">@style/ShapeAppearance.WellSphereConnect.SmallComponent</item>
    </style>

    <!-- Secondary outlined button -->
    <style name="Widget.WellSphereConnect.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/ws_outline</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <!-- Tertiary text-only button -->
    <style name="Widget.WellSphereConnect.Button.Tertiary" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/ws_primary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <!-- TextInputLayout -->
    <style name="Widget.WellSphereConnect.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/ws_textinput_background</item>
        <item name="boxStrokeColor">@color/ws_outline</item>
        <item name="hintTextAppearance">@style/TextAppearance.WellSphereConnect.BodySmall</item>
        <item name="errorTextAppearance">@style/TextAppearance.WellSphereConnect.BodySmall.Error</item>
    </style>

    <!-- Toolbar -->
    <style name="Widget.WellSphereConnect.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/ws_primary</item>
        <item name="android:titleTextColor">@color/ws_on_primary</item>
        <item name="android:subtitleTextColor">@color/ws_on_primary</item>
        <item name="titleCentered">true</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Chip for filters -->
    <style name="Widget.WellSphereConnect.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearance">@style/ShapeAppearance.WellSphereConnect.SmallComponent</item>
    </style>

    <!-- Card view used for timeline posts -->
    <style name="Widget.WellSphereConnect.Card.Timeline" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="shapeAppearance">@style/ShapeAppearance.WellSphereConnect.MediumComponent</item>
    </style>

    <!-- =========================  TEXT APPEARANCES  =========================-->

    <!-- Large headline for section headers -->
    <style name="TextAppearance.WellSphereConnect.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/ws_on_surface</item>
    </style>

    <!-- Body text -->
    <style name="TextAppearance.WellSphereConnect.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/ws_on_surface</item>
    </style>

    <!-- Small body with error tint -->
    <style name="TextAppearance.WellSphereConnect.BodySmall.Error" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/ws_error</item>
    </style>

    <!-- =====================  SHAPE APPEARANCE TOKENS  =====================-->

    <!-- Round corners for small components (e.g., buttons, chips) -->
    <style name="ShapeAppearance.WellSphereConnect.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Medium components (cards, dialogs) -->
    <style name="ShapeAppearance.WellSphereConnect.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">24dp</item>
    </style>

    <!-- ======================  MODAL BOTTOM SHEET THEME  ===================-->

    <style name="ThemeOverlay.WellSphereConnect.ModalBottomSheet" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="colorSurface">@color/ws_surface</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.WellSphereConnect.MediumComponent</item>
    </style>

    <!-- ======================  GDPR & LOCATION DIALOG  =====================-->

    <style name="ThemeOverlay.WellSphereConnect.PermissionSheet" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="colorSurface">@color/ws_surface_variant</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.WellSphereConnect.MediumComponent</item>
    </style>

</resources>