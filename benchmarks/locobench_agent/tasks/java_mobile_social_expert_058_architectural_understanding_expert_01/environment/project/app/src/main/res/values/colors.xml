<?xml version="1.0" encoding="utf-8"?>
<!--
    File:        colors.xml
    Project:     WellSphere Connect (mobile_social)
    Purpose:     Centralized palette defining all theme, semantic, and utility
                 colors used throughout the application.  Color names follow the
                 Material 3 naming guidelines plus additional domain-specific
                 values (e.g., success, warning, biometricIconTint).
                 
                 NOTE:
                 • Keep this list alphabetically ordered inside logical blocks
                   to ease merge conflict resolution.
                 • Always define colors in ARGB (8-digit) or RGB (6-digit) hex
                   format.  Do NOT reference other colors via hex to preserve
                   design-system traceability.
                 • For dark-theme variants, create a parallel file
                   `colors-night.xml` overriding only the values that differ.
-->
<resources>

    <!-- ───────────────────────────────
         MATERIAL 3 CORE PALETTE
         ─────────────────────────────── -->
    <color name="colorPrimary">#00695C</color>
    <color name="colorOnPrimary">#FFFFFF</color>
    <color name="colorPrimaryContainer">#004D40</color>

    <color name="colorSecondary">#8E24AA</color>
    <color name="colorOnSecondary">#FFFFFF</color>
    <color name="colorSecondaryContainer">#6A0080</color>

    <color name="colorTertiary">#0097A7</color>
    <color name="colorOnTertiary">#FFFFFF</color>

    <color name="colorBackground">#F5F5F5</color>
    <color name="colorOnBackground">#212121</color>

    <color name="colorSurface">#FFFFFF</color>
    <color name="colorOnSurface">#212121</color>

    <color name="colorOutline">#BDBDBD</color>

    <color name="colorError">#D32F2F</color>
    <color name="colorOnError">#FFFFFF</color>

    <!-- ───────────────────────────────
         SEMANTIC / DOMAIN COLORS
         ─────────────────────────────── -->
    <color name="colorInfo">#1976D2</color>
    <color name="colorSuccess">#388E3C</color>
    <color name="colorWarning">#FFA000</color>

    <!-- Tint used for biometric (fingerprint / face) auth icons -->
    <color name="biometricIconTint">#009688</color>

    <!-- Scrim shown when the Activity is backgrounded to mask PHI -->
    <color name="colorPrivacyScrim">#CC000000</color>

    <!-- ───────────────────────────────
         UTILITY & TRANSPARENT SHADES
         ─────────────────────────────── -->
    <color name="transparent">#00000000</color>
    <color name="white">#FFFFFFFF</color>
    <color name="black">#FF000000</color>

    <!-- ───────────────────────────────
         DATA VISUALIZATION PALETTE
         Used in line/bar charts for vitals, medication adherence, etc.
         ─────────────────────────────── -->
    <array name="vitalChartPalette">
        <item>@color/colorSecondary</item>
        <item>@color/colorInfo</item>
        <item>#F4511E</item> <!-- Burnt orange -->
        <item>#1E88E5</item> <!-- Bright blue -->
        <item>#7B1FA2</item> <!-- Deep purple -->
    </array>

    <!-- ───────────────────────────────
         STATE SELECTORS
         Button: Medication Adherence (Checked = Taken, Unchecked = Missed)
         ─────────────────────────────── -->
    <selector xmlns:android="http://schemas.android.com/apk/res/android"
              name="adherenceButtonBackground">
        <item android:color="@color/colorSuccess"
              android:state_checked="true"/>
        <item android:color="@color/colorError"
              android:state_checked="false"/>
    </selector>

</resources>
```