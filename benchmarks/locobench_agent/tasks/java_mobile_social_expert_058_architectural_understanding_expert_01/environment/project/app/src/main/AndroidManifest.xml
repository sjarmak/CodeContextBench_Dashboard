<?xml version="1.0" encoding="utf-8"?>
<!--
    WellSphere Connect – AndroidManifest.xml
    Production-grade manifest with rigorous privacy, security, and modularity considerations.
    Copyright © WellSphere Health
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wellsphere.connect"
    android:versionCode="42"
    android:versionName="3.7.0"
    android:compileSdkVersion="34"
    android:installLocation="auto">

    <!-- =======================
         GLOBAL PERMISSIONS
         ======================= -->
    <!-- Network / Sync -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Notifications / Push -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"
        android:required="false" />

    <!-- Location-based wellness activities -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Camera / Media Capture -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- Biometric authentication -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <!-- In-app purchases -->
    <uses-permission android:name="com.android.vending.BILLING" />

    <!-- Foreground service for background sync -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- Required for deep-link verification on Android 12+ -->
    <queries>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="https" android:host="connect.wellsphere.com" />
        </intent>
    </queries>

    <!-- Hardware feature declarations (for Play Store filtering) -->
    <uses-feature android:name="android.hardware.location.gps" android:required="false" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.fingerprint" android:required="false" />
    <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="false" />

    <!-- =======================
         APPLICATION NODE
         ======================= -->
    <application
        android:name=".WellSphereApp"
        android:allowBackup="false"
        android:exported="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.WellSphere"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:fullBackupContent="false"  <!-- HIPAA: disable AutoBackup -->
        tools:targetApi="31"
        xmlns:tools="http://schemas.android.com/tools">

        <!-- Firebase / Crashlytics -->
        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="true" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorPrimary" />

        <!-- Branch or App Links would go here if enabled -->

        <!-- ==========
             ACTIVITIES
             ========== -->
        <activity
            android:name=".ui.launch.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.WellSphere.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.auth.BiometricAuthActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="fullSensor" />

        <!-- Deep-link entry point for shared wellness stories -->
        <activity
            android:name=".ui.story.StoryDetailActivity"
            android:exported="true"
            android:theme="@style/Theme.WellSphere.Transparent">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="connect.wellsphere.com"
                    android:pathPrefix="/stories" />
            </intent-filter>
        </activity>

        <!-- ==========
             SERVICES
             ========== -->
        <!-- Firebase Cloud Messaging Service -->
        <service
            android:name=".notifications.WellSphereMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- Background Job / WorkManager -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:exported="false"
            tools:node="merge" />

        <!-- Foreground sync service for offline vitals -->
        <service
            android:name=".sync.OfflineSyncService"
            android:foregroundServiceType="dataSync"
            android:exported="false" />

        <!-- ==========
             CONTENT PROVIDERS
             ========== -->
        <!-- Required for sharing secure files (camera capture, CSV exports, etc.) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Room database content provider for backup/restore if ever enabled -->
        <provider
            android:name="androidx.room.RoomContentProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            tools:node="remove" /> <!-- Not exported; HIPAA-restricted -->

        <!-- ==========
             RECEIVERS
             ========== -->
        <!-- Boot receiver to reschedule WorkManager tasks after device reboot -->
        <receiver
            android:name=".sync.BootCompletedReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- Connectivity change observer for adaptive sync -->
        <receiver
            android:name=".sync.ConnectivityReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
```