<?xml version="1.0" encoding="utf-8"?>
<!--
    fragment_feed.xml
    ------------------
    Author  : WellSphere Mobile Team
    Purpose : Displays the social feed within the WellSphere Connect app.
              Uses Android-X, Material3, and DataBinding.  Optimised for
              accessibility, orientation changes, and large-screen devices.
-->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <!-- ViewModel reference for two-way databinding -->
    <data>
        <import type="com.wellsphere.connect.ui.feed.model.FeedUiState"/>
        <variable
            name="viewModel"
            type="com.wellsphere.connect.ui.feed.FeedViewModel" />
    </data>

    <!-- CoordinatorLayout enables Material behaviors (e.g., collapsing toolbar) -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/feedCoordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <!-- AppBar with collapsing behavior for a polished UX -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.WellSphere.AppBarOverlay"
            android:fitsSystemWindows="true"
            android:stateListAnimator="@null">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                style="@style/Widget.WellSphere.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:navigationIcon="@drawable/ic_arrow_back_24"
                app:title="@string/title_feed"
                app:titleCentered="true"
                tools:navigationContentDescription="@string/desc_navigate_up"/>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- SwipeRefreshLayout provides pull-to-refresh gesture -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:refreshing="@{viewModel.uiState == FeedUiState.LOADING}"
            app:enabled="@{viewModel.canPullToRefresh}">

            <!-- MultiStateView handles LOADING, EMPTY, ERROR, CONTENT states -->
            <com.wellsphere.connect.widget.MultiStateView
                android:id="@+id/multiStateView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:msv_viewState="@{viewModel.uiState.ordinal}">

                <!-- CONTENT: Feed RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerFeed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingStart="@dimen/feed_content_padding"
                    android:paddingEnd="@dimen/feed_content_padding"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/item_post"/>

                <!-- LOADING: Shimmer placeholder -->
                <include
                    layout="@layout/view_shimmer_feed"
                    android:id="@+id/shimmerLoading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <!-- EMPTY: No posts yet -->
                <LinearLayout
                    android:id="@+id/emptyState"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/ic_empty_feed"
                        android:contentDescription="@string/desc_empty_state"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:text="@string/label_feed_empty"
                        android:textAppearance="?attr/textAppearanceBodyLarge"/>

                </LinearLayout>

                <!-- ERROR: Retry panel -->
                <LinearLayout
                    android:id="@+id/errorState"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/feed_content_padding">

                    <ImageView
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/ic_failed_state"
                        android:contentDescription="@string/desc_error_state"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:text="@string/label_feed_error"
                        android:textAppearance="?attr/textAppearanceBodyLarge"/>

                    <Button
                        android:id="@+id/btnRetry"
                        style="@style/Widget.WellSphere.Button.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="@string/action_retry"
                        app:onClick="@{() -> viewModel.fetchLatest()}"/>

                </LinearLayout>

            </com.wellsphere.connect.widget.MultiStateView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- Floating action button for creating new post -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCreatePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:contentDescription="@string/desc_create_post"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_add_24"
            app:fabSize="auto"
            app:layout_anchor="@id/feedCoordinator"
            app:layout_anchorGravity="bottom|end"
            app:onClick="@{() -> viewModel.onCreatePostClicked()}"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>