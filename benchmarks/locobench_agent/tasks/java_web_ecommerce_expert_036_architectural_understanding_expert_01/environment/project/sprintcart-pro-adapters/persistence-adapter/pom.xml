<!--
    Module POM for the Persistence Adapter of SprintCart Pro
    --------------------------------------------------------
    This module contains outbound adapters responsible for persisting
    domain aggregates (Order, Catalog, Workflow, etc.) into a relational
    data-store.  It follows the Hexagonal Architecture: the module implements
    the outbound persistence ports exposed by the domain layer while remaining
    agnostic of inbound delivery mechanisms.

    Key technology choices
    ----------------------
    • Spring Data JPA          – repository abstraction on top of Hibernate
    • PostgreSQL Driver        – advanced SQL dialect with JSONB support
    • Flyway                   – zero-downtime schema migrations
    • MapStruct                – compile-time DTO <--> JPA entity mapping
    • Lombok                   – reduces boilerplate without runtime penalties
    • Testcontainers-Postgres  – hermetic integration tests

    Build notes
    -----------
    • Java 17  (LTS)
    • Maven ≥ 3.8
    • Follows Spring Boot’s dependency management while delegating overall
      version alignment to the root parent POM.
-->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="
              http://maven.apache.org/POM/4.0.0
              https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <!-- Inherit company-wide defaults and dependency management -->
    <parent>
        <groupId>com.sprintcartpro</groupId>
        <artifactId>sprintcart-pro-parent</artifactId>
        <version>1.2.0</version>
        <relativePath>../..</relativePath>
    </parent>

    <artifactId>sprintcart-pro-adapters-persistence-adapter</artifactId>
    <name>SprintCart Pro • Persistence Adapter</name>
    <description>Outbound persistence adapter (JPA, PostgreSQL) implementing domain ports</description>
    <packaging>jar</packaging>

    <!-- Module-specific properties -->
    <properties>
        <!-- Ensures consistency across modules -->
        <java.version>17</java.version>
        <mapstruct.version>1.5.5.Final</mapstruct.version>
        <lombok.version>1.18.28</lombok.version>
        <flyway.version>9.21.2</flyway.version>
    </properties>

    <dependencies>

        <!-- === Core Infrastructure === -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>

        <!-- PostgreSQL JDBC driver -->
        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <scope>runtime</scope>
        </dependency>

        <!-- Flyway – database migrations -->
        <dependency>
            <groupId>org.flywaydb</groupId>
            <artifactId>flyway-core</artifactId>
            <version>${flyway.version}</version>
        </dependency>

        <!-- === Compile-time helpers === -->
        <dependency>
            <groupId>org.mapstruct</groupId>
            <artifactId>mapstruct</artifactId>
            <version>${mapstruct.version}</version>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>${lombok.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- === Hexagonal dependencies === -->
        <!-- Domain layer – contains entities, value objects, and ports -->
        <dependency>
            <groupId>com.sprintcartpro</groupId>
            <artifactId>sprintcart-pro-domain</artifactId>
        </dependency>

        <!-- === Test-time dependencies === -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
            <exclusions>
                <!-- Use JUnit 5 only -->
                <exclusion>
                    <groupId>org.junit.vintage</groupId>
                    <artifactId>junit-vintage-engine</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- Testcontainers for PostgreSQL integration tests -->
        <dependency>
            <groupId>org.testcontainers</groupId>
            <artifactId>postgresql</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.testcontainers</groupId>
            <artifactId>junit-jupiter</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <!-- Compiler plugin with annotation processing enabled -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <annotationProcessorPaths>
                        <!-- MapStruct processor -->
                        <path>
                            <groupId>org.mapstruct</groupId>
                            <artifactId>mapstruct-processor</artifactId>
                            <version>${mapstruct.version}</version>
                        </path>
                        <!-- Lombok – needed only during compilation -->
                        <path>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                            <version>${lombok.version}</version>
                        </path>
                    </annotationProcessorPaths>
                </configuration>
            </plugin>

            <!-- Spring Boot plugin for executable JARs & repackaging -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>

            <!-- Fail build on test failure, supports JUnit 5 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.1.2</version>
                <configuration>
                    <useModulePath>false</useModulePath>
                    <includes>
                        <include>**/*Test.java</include>
                    </includes>
                </configuration>
            </plugin>

            <!-- Generate aggregated coverage report in parent module -->
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.8.10</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>report</id>
                        <phase>test</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <!-- Ensures CI/CD pipelines can override DB connection strings at runtime -->
    <profiles>
        <profile>
            <id>ci</id>
            <activation>
                <property>
                    <name>env.CI</name>
                </property>
            </activation>
            <properties>
                <spring.jpa.show-sql>false</spring.jpa.show-sql>
                <spring.flyway.enabled>false</spring.flyway.enabled>
            </properties>
        </profile>
    </profiles>

</project>
