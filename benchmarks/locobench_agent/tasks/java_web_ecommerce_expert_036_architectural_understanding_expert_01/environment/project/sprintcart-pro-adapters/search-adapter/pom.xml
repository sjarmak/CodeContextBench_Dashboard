<!--
  ~ SprintCart Pro – Hyper-Productive E-Commerce Workbench
  ~ Module      : Search Adapter (Outbound)
  ~ File        : sprintcart-pro/sprintcart-pro-adapters/search-adapter/pom.xml
  ~ Description : Integrates SprintCart’s domain search port with external
  ~               full-text search providers (default: Elasticsearch).  
  -->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
                             http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <!-- Inherits global dependency & plugin management -->
    <parent>
        <groupId>com.sprintcart.pro</groupId>
        <artifactId>sprintcart-pro-parent</artifactId>
        <version>1.0.0</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <groupId>com.sprintcart.pro.adapters</groupId>
    <artifactId>search-adapter</artifactId>
    <version>${project.parent.version}</version>
    <name>SprintCart Pro – Search Adapter</name>
    <description>Outbound adapter that syncs catalog indices with Elasticsearch and other search backends.</description>
    <packaging>jar</packaging>

    <properties>
        <!-- Java language level -->
        <java.version>17</java.version>
        <!-- Elasticsearch client version kept consistent across platform -->
        <elasticsearch.version>8.10.0</elasticsearch.version>
        <!-- MapStruct code generation -->
        <mapstruct.version>1.5.5.Final</mapstruct.version>
        <maven.compiler.parameters>true</maven.compiler.parameters>
    </properties>

    <dependencies>

        <!-- ============= Internal Modules ============= -->
        <!-- Domain contracts (hexagonal ports) -->
        <dependency>
            <groupId>com.sprintcart.pro</groupId>
            <artifactId>domain-core</artifactId>
            <version>${project.parent.version}</version>
        </dependency>

        <!-- Utility library with shared observability & error-handling helpers -->
        <dependency>
            <groupId>com.sprintcart.pro</groupId>
            <artifactId>shared-kernel</artifactId>
            <version>${project.parent.version}</version>
        </dependency>

        <!-- ============= External Libraries ============= -->
        <!-- Spring Boot starters -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
        </dependency>

        <!-- Spring Data Elasticsearch for reactive repositories -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-elasticsearch</artifactId>
        </dependency>

        <!-- Jakarta Bean Validation (compile-time) -->
        <dependency>
            <groupId>org.hibernate.validator</groupId>
            <artifactId>hibernate-validator</artifactId>
        </dependency>

        <!-- MapStruct for DTO <-> Entity conversions -->
        <dependency>
            <groupId>org.mapstruct</groupId>
            <artifactId>mapstruct</artifactId>
            <version>${mapstruct.version}</version>
        </dependency>

        <!-- Lombok for boilerplate reduction (provided at compile time) -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <optional>true</optional>
        </dependency>

        <!-- ============================================= -->
        <!-- ================== Testing ================== -->
        <!-- ============================================= -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.testcontainers</groupId>
            <artifactId>junit-jupiter</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.testcontainers</groupId>
            <artifactId>elasticsearch</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- Maven Compiler Plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <parameters>${maven.compiler.parameters}</parameters>
                    <annotationProcessorPaths>
                        <!-- MapStruct & Lombok annotation processors -->
                        <path>
                            <groupId>org.mapstruct</groupId>
                            <artifactId>mapstruct-processor</artifactId>
                            <version>${mapstruct.version}</version>
                        </path>
                        <path>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                            <version>1.18.30</version>
                        </path>
                    </annotationProcessorPaths>
                </configuration>
            </plugin>

            <!-- Spring Boot Maven plugin for fat-jar packaging -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>

            <!-- JaCoCo code coverage -->
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.8.10</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>report</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Maven Surefire for unit tests with JUnit 5 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.1.2</version>
                <configuration>
                    <useModulePath>false</useModulePath>
                    <includes>
                        <include>**/*Tests.java</include>
                        <include>**/*Test.java</include>
                    </includes>
                </configuration>
            </plugin>

            <!-- OWASP Dependency-Check for vulnerability scanning -->
            <plugin>
                <groupId>org.owasp</groupId>
                <artifactId>dependency-check-maven</artifactId>
                <version>8.4.0</version>
                <configuration>
                    <failBuildOnAnyVulnerability>true</failBuildOnAnyVulnerability>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <!-- Release configuration for CI/CD (GitHub Actions) -->
    <profiles>
        <profile>
            <id>ci</id>
            <properties>
                <!-- CI servers use UTC clock -->
                <user.timezone>UTC</user.timezone>
            </properties>
            <activation>
                <property>
                    <name>env.CI</name>
                    <value>true</value>
                </property>
            </activation>
        </profile>
    </profiles>

</project>
