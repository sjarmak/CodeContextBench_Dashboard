<?xml version="1.0" encoding="UTF-8"?>
<!--
  SprintCart Pro – Notification Adapter
  -------------------------------------
  This Maven module implements the outbound notification adapter that bridges
  the domain-level NotificationPort with concrete e-mail and SMS providers.
  The module is intentionally self-contained so that new providers can be
  swapped in by means of the Strategy pattern without impacting the rest of
  the platform.

  Guidelines:
    • Java 17 is the platform baseline.
    • Dependencies are kept minimal and focused on adapter concerns.
    • Unit tests run on JUnit 5; integration-style tests run with Failsafe.
-->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <!-- Inherit corporate standards (Java version, plugin management, etc.) -->
    <parent>
        <groupId>com.sprintcart.pro</groupId>
        <artifactId>sprintcart-pro</artifactId>
        <version>${revision}</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <groupId>com.sprintcart.pro</groupId>
    <artifactId>notification-adapter</artifactId>
    <name>SprintCart Pro – Notification Adapter</name>
    <description>
        Outbound adapter responsible for translating domain-level notification
        events into concrete e-mail and SMS provider requests (e.g. SES, Twilio).
    </description>
    <url>https://github.com/sprintcart/sprintcart-pro</url>
    <packaging>jar</packaging>

    <!-- ====================================================================== -->
    <!--  Dependencies                                                          -->
    <!-- ====================================================================== -->
    <dependencies>

        <!-- === Internal Modules ============================================ -->
        <!-- Domain model (value objects, aggregates, etc.) -->
        <dependency>
            <groupId>com.sprintcart.pro</groupId>
            <artifactId>domain</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Ports (NotificationPort, etc.) -->
        <dependency>
            <groupId>com.sprintcart.pro</groupId>
            <artifactId>ports</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- === Third-Party Libraries ======================================= -->
        <!-- Spring e-mail abstraction for SMTP/SES usage -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-mail</artifactId>
        </dependency>

        <!-- Twilio SDK for SMS dispatch -->
        <dependency>
            <groupId>com.twilio.sdk</groupId>
            <artifactId>twilio</artifactId>
            <version>9.0.0</version>
        </dependency>

        <!-- Commons Lang (String utils, etc.) -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>

        <!-- Logging (delegates to Logback via parent Spring Boot) -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>

        <!-- === Testing ====================================================== -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-junit-jupiter</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <!-- ====================================================================== -->
    <!--  Build Configuration                                                  -->
    <!-- ====================================================================== -->
    <build>
        <plugins>

            <!-- Compile with Java 17 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <release>17</release>
                    <parameters>true</parameters>
                    <compilerArgs>
                        <arg>-Werror</arg> <!-- fail build on compiler warnings -->
                    </compilerArgs>
                </configuration>
            </plugin>

            <!-- Unit tests -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.1.2</version>
                <configuration>
                    <includes>
                        <include>**/*Test.java</include>
                    </includes>
                </configuration>
            </plugin>

            <!-- Integration tests (IT) -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>3.1.2</version>
                <executions>
                    <execution>
                        <id>integration-tests</id>
                        <phase>integration-test</phase>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                        <configuration>
                            <includes>
                                <include>**/*IT.java</include>
                            </includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Code coverage -->
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.8.10</version>
                <executions>
                    <execution>
                        <id>prepare-agent</id>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>report</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Spring Boot plugin for executable JARs (optional for adapter) -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>3.1.2</version>
                <configuration>
                    <mainClass>com.sprintcart.pro.adapter.notification.NotificationAdapterApp</mainClass>
                </configuration>
            </plugin>

        </plugins>
    </build>

    <!-- ====================================================================== -->
    <!--  Additional Metadata                                                  -->
    <!-- ====================================================================== -->
    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>https://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <developers>
        <developer>
            <id>core-dev-team</id>
            <name>SprintCart Core Dev Team</name>
            <email>engineering@sprintcart.com</email>
            <organization>SprintCart</organization>
            <organizationUrl>https://sprintcart.com</organizationUrl>
        </developer>
    </developers>

    <scm>
        <url>https://github.com/sprintcart/sprintcart-pro</url>
        <connection>scm:git:git://github.com/sprintcart/sprintcart-pro.git</connection>
        <developerConnection>scm:git:ssh://git@github.com:sprintcart/sprintcart-pro.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <!-- Enforce dependency convergence to avoid version clashes -->
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>3.1.2</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <!-- Make the module release-ready -->
    <properties>
        <!-- revision is inherited from the parent; redefine here for IDEs -->
        <revision>1.0.0-SNAPSHOT</revision>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.showDeprecation>true</maven.compiler.showDeprecation>
    </properties>

</project>
