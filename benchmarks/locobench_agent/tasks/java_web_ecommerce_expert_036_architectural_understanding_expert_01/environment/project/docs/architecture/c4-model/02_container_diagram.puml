@startuml
' ********************************************************************
' SprintCart Pro – Container Diagram
' C4-PlantUML syntax is used for consistency with the rest of the docs
' ********************************************************************

!includeurl https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

' ---------------------------------------------------------------
' Personae
' ---------------------------------------------------------------
Person(customer, "Shopper", "Browses, purchases, and tracks orders")
Person(merchant, "Merchant Operator", "Curates catalog, fulfills orders, and automates workflows")
Person(admin, "System Admin", "Maintains infrastructure and configures integrations")

' ---------------------------------------------------------------
' System Boundary
' ---------------------------------------------------------------
System_Boundary(sprintcart, "SprintCart Pro") {

  Container(spa, "Web SPA", "Vue 3 + Vite", "Responsive storefront & back-office UI served as a SPA")
  Container(api, "API Server", "Java 17 / Spring Boot", "Exposes REST & GraphQL endpoints; implements Authentication, Validation, and Application Services")
  Container(automation, "Automation Studio", "Java 17 / Spring Boot", "Event-driven rules engine that executes user-defined automations")
  ContainerDb(db, "Primary Database", "PostgreSQL 14", "Stores products, orders, users, KPIs")
  Container(search, "Search Engine", "Elasticsearch 8", "Full-text and faceted search across catalog & orders")
  Container(msg, "Message Broker", "Apache Kafka 3", "Event backbone for domain events and automation triggers")
  Container(notify, "Notification Service", "Java 17 / Spring Boot", "Sends email & SMS via external providers")
}

' ---------------------------------------------------------------
' External Systems
' ---------------------------------------------------------------
System_Ext(paymentGateway, "Payment Gateway", "Processes credit-card & wallet payments")
System_Ext(erp, "Third-Party ERP", "Synchronizes inventory and financial data")
System_Ext(emailProvider, "Transactional Email Provider", "Delivers emails securely at scale")
System_Ext(smsProvider, "SMS Gateway", "Delivers SMS notifications worldwide")

' ---------------------------------------------------------------
' Relationships — UI
' ---------------------------------------------------------------
Rel(customer, spa, "Browses & purchases", "HTTPS")
Rel(merchant, spa, "Manages store & automations", "HTTPS")
Rel(admin, api, "Configures system via admin API", "HTTPS")

' ---------------------------------------------------------------
' Relationships — Backend
' ---------------------------------------------------------------
Rel(spa, api, "Calls", "REST/GraphQL over HTTPS")
Rel(api, db, "Reads/Writes", "JPA / JDBC")
Rel(api, search, "Indexes & queries products/orders", "Bulk & realtime sync")
Rel(api, msg, "Publishes domain events", "Kafka Topics")
Rel(api, paymentGateway, "Processes payments via", "HTTPS + HMAC")
Rel(api, erp, "Syncs catalog & orders", "HTTPS / SFTP")

Rel(automation, msg, "Consumes domain events", "Kafka Consumer Group")
Rel(automation, api, "Calls application services", "Internal HTTP")
Rel(automation, notify, "Instructs to send notifications", "gRPC")

Rel(notify, emailProvider, "Sends emails", "SMTP + API")
Rel(notify, smsProvider, "Sends SMS", "REST API")

' ---------------------------------------------------------------
' Tags & Styles
' ---------------------------------------------------------------
AddElementTag("database", $shape = Cylinder, $bgColor = "#E0E0FF", $borderColor = "#4C4CFF")
AddElementTag("external", $bgColor = "#FFF4E6", $borderColor = "#FFAA00")
AddElementTag("async", $lineStyle = Dashed, $lineColor="#888888")

' Apply tags
AddTag(db, "database")
AddTag(search, "database")
AddTag(paymentGateway, "external")
AddTag(erp, "external")
AddTag(emailProvider, "external")
AddTag(smsProvider, "external")
AddTag(msg, "async")

' Legend
SHOW_LEGEND()

@enduml
