{
  "name": "@pulsesphere/socialops-system-monitoring",
  "version": "1.0.0",
  "description": "Core monitoring service for PulseSphere SocialOps. Enriches metrics, logs and traces with real-time social interaction signals to unlock socially-aware observability.",
  "keywords": [
    "pulseSphere",
    "socialops",
    "observability",
    "system-monitoring",
    "microservices",
    "kafka",
    "nats",
    "opentelemetry",
    "typescript"
  ],
  "license": "Apache-2.0",
  "author": "PulseSphere Engineering <engineering@pulsesphere.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/pulsesphere/socialops-system-monitoring.git"
  },
  "homepage": "https://pulsesphere.io/socialops",
  "engines": {
    "node": ">=18.17"
  },
  "type": "module",
  "main": "./dist/main.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only --exit-child --prefer-ts-exts src/main.ts",
    "build": "rimraf dist && tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "start:prod": "cross-env NODE_ENV=production pm2 start dist/main.js --name socialops-monitoring",
    "lint": "eslint \"{src,tests}/**/*.{ts,tsx}\" --max-warnings=0",
    "format": "prettier --write \"{src,tests}/**/*.{ts,tsx,js,json,md,yml}\"",
    "type-check": "tsc --noEmit",
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "jest --watch",
    "security": "npm audit --production",
    "prepare": "husky install",
    "release": "release-it"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/auto-instrumentations-node": "^0.41.0",
    "@opentelemetry/sdk-node": "^0.41.0",
    "@opentelemetry/exporter-prometheus": "^0.41.0",
    "@opentelemetry/propagator-jaeger": "^0.41.0",
    "prom-client": "^15.0.1",
    "winston": "^3.10.0",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.0.0",
    "express-rate-limit": "^7.0.0",
    "dotenv": "^16.3.1",
    "config": "^3.3.10",
    "zod": "^3.22.4",
    "kafkajs": "^2.3.2",
    "nats": "^2.19.0",
    "pino": "^8.17.0",
    "@types/pino": "^8.10.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "uuid": "^9.0.1",
    "p-queue": "^7.4.1",
    "bullmq": "^4.11.1",
    "node-fetch": "^3.3.2",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "rxjs": "^7.8.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.8.10",
    "@types/uuid": "^9.0.2",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "rimraf": "^5.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@types/jest": "^29.5.5",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-conventional": "^18.4.2",
    "release-it": "^17.0.0",
    "pm2": "^5.3.0"
  },
  "peerDependencies": {
    "node": ">=18.17"
  },
  "optionalDependencies": {
    "newrelic": "^10.5.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md,yml}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "serviceName": "socialops-system-monitoring",
    "serviceMesh": {
      "enabled": true,
      "sidecar": "istio"
    },
    "telemetry": {
      "tracer": "jaeger",
      "metricsPort": 9464
    }
  }
}