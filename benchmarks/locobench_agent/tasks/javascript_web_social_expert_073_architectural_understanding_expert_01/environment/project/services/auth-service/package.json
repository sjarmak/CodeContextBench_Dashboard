{
  "name": "@pulselearn-campus-hub/auth-service",
  "version": "1.2.0",
  "description": "Authentication & session management micro-service for PulseLearn Campus Hub. Provides JWT/OAuth 2.0 flows, role-based access control, and event-driven user lifecycle hooks.",
  "author": "PulseLearn Engineering <engineering@pulselearn.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/pulselearn/campus-hub.git",
    "directory": "services/auth-service"
  },
  "homepage": "https://pulselearn.io",
  "keywords": [
    "authentication",
    "jwt",
    "oauth2",
    "nodejs",
    "microservice",
    "event-driven",
    "pulselearn"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --exec ts-node src/index.ts",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "lint": "eslint \"src/**/*.{ts,js}\" --max-warnings=0",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^5.3.1",
    "@sentry/node": "^7.102.1",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.17.3",
    "helmet": "^7.0.1",
    "joi": "^17.10.1",
    "jsonwebtoken": "^9.0.1",
    "kafkajs": "^2.4.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "nats": "^2.16.0",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "uuid": "^9.0.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.199",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.8.2",
    "@types/passport-google-oauth20": "^2.0.12",
    "@types/passport-jwt": "^3.0.8",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "prisma": "^5.3.1",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "import",
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/recommended",
      "plugin:jest/recommended",
      "prettier"
    ],
    "env": {
      "es2022": true,
      "node": true,
      "jest": true
    },
    "ignorePatterns": [
      "dist",
      "coverage"
    ],
    "rules": {
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          },
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index",
            "object",
            "type"
          ],
          "newlines-between": "always"
        }
      ],
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "trailingComma": "none",
    "endOfLine": "lf"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}