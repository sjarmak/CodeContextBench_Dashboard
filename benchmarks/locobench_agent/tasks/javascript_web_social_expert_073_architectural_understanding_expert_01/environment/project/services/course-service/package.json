{
  "name": "@pulselearn/course-service",
  "version": "1.3.0",
  "description": "Micro-service responsible for course and curriculum lifecycle within PulseLearn Campus Hub.",
  "author": "PulseLearn Engineering <engineering@pulselearn.io>",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/PulseLearn/pulselearn-campus-hub",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PulseLearn/pulselearn-campus-hub.git",
    "directory": "services/course-service"
  },
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.16.0",
    "npm": ">=9.5.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --legacy-watch --inspect=0.0.0.0:9229 src/index.ts",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "lint": "eslint --ext .ts,.js src",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"{src,test,scripts}/**/*.{ts,js,json,md}\"",
    "test": "cross-env NODE_ENV=test jest --passWithNoTests --runInBand",
    "prepare": "husky install",
    "healthcheck": "node scripts/healthcheck.js",
    "publish:event-schemas": "node scripts/publish-avro-schemas.js",
    "migration:run": "ts-node-esm -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run",
    "migration:generate": "ts-node-esm -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -n"
  },
  "dependencies": {
    "@types/pg": "^8.10.1",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.0.0",
    "http-status-codes": "^2.2.0",
    "joi": "^17.10.1",
    "jsonwebtoken": "^9.0.1",
    "kafkajs": "^2.4.1",
    "pg": "^8.11.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.7",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.7.1",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/test"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageProvider": "v8",
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 75,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapper": {
      "^(.*)\\.js$": "$1"
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "ignorePatterns": [
      "dist",
      "node_modules"
    ],
    "rules": {
      "no-console": "warn",
      "no-async-promise-executor": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "trailingComma": "all",
    "endOfLine": "auto"
  },
  "config": {
    "serviceName": "course-service"
  }
}