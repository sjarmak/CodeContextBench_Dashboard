{
  "name": "@pulselearn/notification-service",
  "version": "1.3.0",
  "description": "Micro-service responsible for multi-channel (in-app, e-mail, push) notifications within the PulseLearn Campus Hub ecosystem.",
  "author": "PulseLearn Engineering <engineering@pulselearn.io>",
  "license": "MIT",
  "type": "module",
  "private": true,
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=18.15.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --delay 1 --exec \"npm run build:watch\"",
    "build": "rimraf dist && tsc -p tsconfig.json",
    "build:watch": "ts-node-esm --transpile-only src/index.ts",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "lint": "eslint \"{src,test}/**/*.{js,ts}\" --max-warnings=0",
    "lint:fix": "npm run lint -- --fix",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:watch": "npm run test -- --watch",
    "coverage": "npm run test -- --coverage",
    "prepare": "husky install"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.2",
    "@redis/client": "^1.6.4",
    "axios": "^1.6.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "kafkajs": "^2.5.2",
    "nats": "^2.18.0",
    "nodemailer": "^6.9.4",
    "uuid": "^9.0.1",
    "web-push": "^3.6.8",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.4.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-esm": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/index.ts"
    ],
    "coverageDirectory": "./coverage"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es2022": true,
      "node": true,
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-console": "warn",
      "import/prefer-default-export": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "semi": true
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "resolutions": {
    "**/debug": "^4.3.4"
  },
  "config": {
    "serviceName": "notification-service",
    "healthEndpoint": "/healthz"
  },
  "keywords": [
    "notifications",
    "microservice",
    "kafka",
    "nats",
    "pulselearn",
    "campus",
    "event-driven",
    "web-push",
    "email",
    "typescript"
  ]
}