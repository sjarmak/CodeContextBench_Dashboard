{
  "name": "@pulselearn/payment-service",
  "version": "1.0.0",
  "private": true,
  "description": "Payment micro-service for PulseLearn Campus Hub — handles premium course purchases, subscription billing, refunds, and invoicing while publishing domain events to the platform’s Kafka/NATS backbone.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pulselearn/campus-hub.git",
    "directory": "services/payment-service"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.5.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,json,md}\"",
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "npm run test -- --watch",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d ./src/database/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d ./src/database/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d ./src/database/data-source.ts",
    "commit": "git-cz"
  },
  "dependencies": {
    "@sentry/node": "^7.62.0",
    "@typegoose/typegoose": "^11.6.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.0.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.1",
    "kafkajs": "^2.4.1",
    "mongoose": "^7.5.0",
    "nats": "^2.15.0",
    "node-cache": "^5.1.2",
    "pino": "^8.15.0",
    "pino-pretty": "^10.3.1",
    "reflect-metadata": "^0.1.13",
    "stripe": "^12.18.0",
    "swagger-jsdoc": "^7.2.3",
    "swagger-ui-express": "^5.0.0",
    "tslib": "^2.6.2",
    "uuid": "^9.0.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-conventional": "^18.4.2",
    "@swc/core": "^1.3.43",
    "@swc/jest": "^0.2.24",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typeorm": "^0.3.17",
    "typeorm-ts-node-commonjs": "^1.0.6",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "resolutions": {
    "lodash": "^4.17.21"
  }
}