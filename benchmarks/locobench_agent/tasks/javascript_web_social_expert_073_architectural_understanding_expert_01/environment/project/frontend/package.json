{
  "name": "pulselearn-campus-hub-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "Frontend SPA for PulseLearn Campus Hub â€“ a real-time, event-driven social learning platform.",
  "author": "PulseLearn Engineering",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack serve --config ./config/webpack.dev.js",
    "start": "cross-env NODE_ENV=production webpack serve --config ./config/webpack.prod.js",
    "build": "cross-env NODE_ENV=production webpack --config ./config/webpack.prod.js",
    "analyze": "webpack --config ./config/webpack.prod.js --profile --json > stats.json && webpack-bundle-analyzer stats.json",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css,md}'",
    "test": "cross-env NODE_ENV=test jest",
    "coverage": "cross-env NODE_ENV=test jest --coverage",
    "prepare": "husky install",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "clean": "rimraf dist stats.json"
  },
  "dependencies": {
    "@apollo/client": "^3.8.4",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.14.7",
    "@reduxjs/toolkit": "^1.9.5",
    "@tanstack/react-query": "^4.29.0",
    "axios": "^1.5.0",
    "date-fns": "^2.30.0",
    "graphql": "^16.8.1",
    "jwt-decode": "^3.1.2",
    "notistack": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.45.1",
    "react-router-dom": "^6.15.0",
    "react-use": "^17.4.0",
    "react-markdown": "^9.0.0",
    "rxjs": "^7.8.1",
    "socket.io-client": "^4.7.2",
    "swiper": "^10.4.0",
    "uuid": "^9.0.0",
    "yup": "^1.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.20",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.15",
    "@svgr/webpack": "^8.1.2",
    "@testing-library/jest-dom": "^6.0.1",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.4.6",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "babel-loader": "^9.1.4",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "mini-css-extract-plugin": "^2.7.6",
    "msw": "^1.3.2",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "webpack": "^5.88.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    ">=0.25%",
    "Chrome >= 100",
    "Firefox >= 102",
    "Edge >= 100",
    "Safari >= 15"
  ],
  "resolutions": {
    "glob-parent": "^6.0.2"
  }
}