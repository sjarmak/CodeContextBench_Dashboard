{
  "name": "@pulseops/warehouse-infra",
  "version": "1.3.0",
  "description": "AWS CDK (for .NET) infrastructure project that provisions the PulseOps Warehouse â€” a serverless productivity-intelligence fabric.",
  "private": true,
  "author": "PulseOps Engineering <engineering@pulseops.io>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/pulseops/warehouse",
    "directory": "infra"
  },
  "keywords": [
    "aws",
    "cdk",
    "serverless",
    "data-warehouse",
    "productivity-intelligence",
    "pulseops"
  ],
  "engines": {
    "node": ">=16.17.0"
  },
  "scripts": {
    "bootstrap": "cdk bootstrap",
    "synth": "dotnet build src/PulseOps.Infrastructure/PulseOps.Infrastructure.csproj && cdk synth",
    "deploy": "npm run synth && cdk deploy --all --require-approval never",
    "destroy": "cdk destroy --all --force",
    "watch": "npm run synth && cdk watch --require-approval never",
    "build": "npm run lint && npm run test && npm run synth",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "dotnet test tests/PulseOps.Unit.Tests/PulseOps.Unit.Tests.csproj --logger:\"trx;LogFileName=unit-tests.trx\"",
    "test:integration": "dotnet test tests/PulseOps.Integration.Tests/PulseOps.Integration.Tests.csproj --logger:\"trx;LogFileName=int-tests.trx\"",
    "lint": "eslint --ext .ts,.js .",
    "format": "prettier --write \"**/*.{ts,js,json,md,yml}\"",
    "upgrade": "npm-check-updates -u && npm install && dotnet tool update -g Amazon.Lambda.Tools"
  },
  "workspaces": [
    "src/*",
    "tests/*"
  ],
  "dependencies": {
    "aws-cdk-lib": "^2.108.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21",
    "aws-sdk": "^2.1423.0",
    "aws-lambda-powertools-typescript": "^1.15.0"
  },
  "devDependencies": {
    "@types/node": "18.15.11",
    "cdk-watch": "^2.2.3",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-json": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "npm-check-updates": "^16.9.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{ts,js,json,md,yml}": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  },
  "overrides": {
    "aws-crt": "1.0.3"
  },
  "cdkMetadata": {
    "analytics": "enabled"
  }
}