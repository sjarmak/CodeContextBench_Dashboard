```xml
<Project Sdk="Microsoft.NET.Sdk.Web">

  <!--──────────────────────────  BUILD CONFIGURATION  ──────────────────────────-->
  <PropertyGroup>
    <!-- Target the latest LTS runtime -->
    <TargetFramework>net8.0</TargetFramework>

    <!-- Opt-in to modern language & tooling features -->
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>

    <!-- Production-grade build settings -->
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <AnalysisLevel>latest</AnalysisLevel>
    <Deterministic>true</Deterministic>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PublishTrimmed>true</PublishTrimmed>
    <PublishReadyToRun>true</PublishReadyToRun>

    <!-- Company metadata -->
    <Company>PaletteStream</Company>
    <Product>PaletteStream ETL Canvas</Product>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
  </PropertyGroup>

  <!--──────────────────────────  PACKAGE REFERENCES  ───────────────────────────-->
  <ItemGroup>
    <!-- Reverse proxy & API-Gateway tooling -->
    <PackageReference Include="Yarp.ReverseProxy" Version="2.1.0" />

    <!-- Observability / structured logging -->
    <PackageReference Include="Serilog.AspNetCore" Version="8.0.0" />
    <PackageReference Include="Serilog.Settings.Configuration" Version="3.5.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="5.0.1" />
    <PackageReference Include="Serilog.Sinks.Elasticsearch" Version="9.1.0" />

    <!-- Resilience & transient-fault handling -->
    <PackageReference Include="Polly.Extensions.Http" Version="3.1.21" />

    <!-- Health-checks / monitoring -->
    <PackageReference Include="AspNetCore.HealthChecks.UI" Version="6.0.4" />
    <PackageReference Include="AspNetCore.HealthChecks.UI.Client" Version="6.0.4" />

    <!-- OpenAPI / Swagger generation -->
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.5.0" />

    <!-- Static code analysis -->
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="8.0.0" PrivateAssets="all" />
    <PackageReference Include="SonarAnalyzer.CSharp" Version="9.16.0.73291" PrivateAssets="all" />
  </ItemGroup>

  <!--──────────────────────────  TEST-SUPPORT PACKAGES  ─────────────────────────-->
  <ItemGroup Condition="'$(Configuration)' == 'Debug'">
    <!-- These packages are only pulled in for local test/debug builds -->
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.10.0" PrivateAssets="all" />
    <PackageReference Include="xunit" Version="2.5.0" PrivateAssets="all" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.5.0" PrivateAssets="all" />
  </ItemGroup>

  <!--──────────────────────────  PUBLISH PROFILES  ──────────────────────────────-->
  <PropertyGroup>
    <!-- Create single-file self-contained linux binaries for container deployment -->
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>linux-x64</RuntimeIdentifier>
    <ContainerImageName>palettestream/apigateway</ContainerImageName>
  </PropertyGroup>

</Project>
