```xml
<Project Sdk="Microsoft.NET.Sdk">

  <!-- 
    PaletteStream.Monitoring
    ========================
    This project represents the Monitoring micro-service for the PaletteStream ETL Canvas.
    It exposes health, metrics and alerting APIs that subscribe to ETL Observer events,
    store time-series data in Prometheus, and publish anomalies to Slack / OpsGenie.
    
    Build is tuned for high code-quality (warnings as errors, nullable reference types),
    deterministic binaries and SourceLink for better debugging in CI/CD.
  -->

  <PropertyGroup>
    <!-- Target the latest LTS runtime -->
    <TargetFramework>net8.0</TargetFramework>

    <!-- Implicit using directives & nullable reference types -->
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- Treat all warnings as errors to enforce high code quality -->
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>

    <!-- Generate XML docs for API consumers and analyzer rules -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>1591</NoWarn> <!-- Allow missing XML docs on test classes -->

    <!-- Produce deterministic builds & SourceLink symbols -->
    <Deterministic>true</Deterministic>
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>

    <!-- Language version explicitly set to latest so the entire team compiles the same features -->
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <!-- Release configuration-specific settings -->
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <Optimize>true</Optimize>
    <DebugType>embedded</DebugType>
    <TieredCompilation>true</TieredCompilation>
    <PublishReadyToRun>true</PublishReadyToRun>
    <PublishTrimmed>false</PublishTrimmed> <!-- Keep reflection happy for DI scanning -->
  </PropertyGroup>

  <ItemGroup>
    <!-- Logging & Observability -->
    <PackageReference Include="Serilog.AspNetCore" Version="8.0.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="5.0.1" />
    <PackageReference Include="Serilog.Sinks.Async" Version="1.5.0" />
    <PackageReference Include="Prometheus.AspNetCore" Version="7.0.0" />
    <PackageReference Include="OpenTelemetry.Extensions.Hosting" Version="1.8.1" />
    <PackageReference Include="OpenTelemetry.Exporter.Prometheus" Version="1.8.1" />

    <!-- Event Streaming (Observer hooks) -->
    <PackageReference Include="Confluent.Kafka" Version="2.4.0" />

    <!-- Background worker & hosted-service utilities -->
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
    <PackageReference Include="System.Threading.Channels" Version="8.0.0" />

    <!-- Configuration & feature flags -->
    <PackageReference Include="Microsoft.FeatureManagement" Version="3.0.0" />

    <!-- Health checks -->
    <PackageReference Include="AspNetCore.HealthChecks.Prometheus.Metrics" Version="6.0.3" />
    <PackageReference Include="AspNetCore.HealthChecks.Kafka" Version="6.0.3" />

    <!-- Resilience / transient-fault handling -->
    <PackageReference Include="Polly" Version="7.2.5" />
  </ItemGroup>

  <!-- Code analyzers & style rules -->
  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="8.0.0" PrivateAssets="all" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.2.0-beta.507" PrivateAssets="all" />
    <PackageReference Include="Roslynator.Analyzers" Version="4.6.0" PrivateAssets="all" />
  </ItemGroup>

  <!-- Internals visible to unit-test assembly -->
  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>PaletteStream.Monitoring.Tests</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

  <!-- Local project references (shared domain contracts, etc.) -->
  <ItemGroup>
    <ProjectReference Include="..\..\Common\PaletteStream.Contracts\PaletteStream.Contracts.csproj" />
    <ProjectReference Include="..\..\Common\PaletteStream.Infrastructure\PaletteStream.Infrastructure.csproj" />
  </ItemGroup>

</Project>
