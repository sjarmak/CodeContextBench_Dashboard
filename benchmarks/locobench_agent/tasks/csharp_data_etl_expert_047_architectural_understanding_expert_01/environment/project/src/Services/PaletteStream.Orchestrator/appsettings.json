{
  "$schema": "https://json.schemastore.org/appsettings.json",

  "Environment": "Development",

  "ConnectionStrings": {
    "Sql": "Server=sqlserver;Database=PaletteStream;User Id=paints;Password=UltraSecretPwd!@#",
    "Hangfire": "Server=sqlserver;Database=PaletteStream_Hangfire;User Id=hangfire;Password=SuperSecretPassword123;",
    "Redis": "redis:6379,defaultDatabase=1"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Seq": {
      "ServerUrl": "http://localhost:5341",
      "ApiKey": ""
    }
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Hangfire": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} => {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341",
          "apiKey": ""
        }
      }
    ]
  },

  "Kafka": {
    "BootstrapServers": "kafka:9092",
    "GroupId": "palette_stream_orchestrator",
    "AutoOffsetReset": "Earliest",
    "Security": {
      "Enabled": false,
      "SaslUsername": "",
      "SaslPassword": "",
      "SaslMechanism": "SCRAM-SHA-256",
      "SecurityProtocol": "SaslSsl"
    },
    "Topics": {
      "RawPigmentStream": "palette.raw.pigment",
      "TransformationEvents": "palette.events.transformations",
      "DeadLetter": "palette.dlq"
    }
  },

  "Hangfire": {
    "WorkerCount": 20,
    "Queues": [ "default", "critical", "slow" ],
    "Dashboard": {
      "Enabled": true,
      "Path": "/jobs"
    },
    "RetryIntervals": [ "00:05:00", "00:30:00", "01:00:00" ],
    "DisableGlobalLocks": true
  },

  "DataLake": {
    "Provider": "S3",
    "RawZone": "s3://palettestream/raw",
    "RefinedZone": "s3://palettestream/refined",
    "CuratedZone": "s3://palettestream/curated",
    "Aws": {
      "AccessKey": "YOUR_AWS_ACCESS_KEY",
      "SecretKey": "YOUR_AWS_SECRET_KEY",
      "Region": "us-east-1"
    }
  },

  "Observers": {
    "Metrics": {
      "Enabled": true,
      "PrometheusEndpoint": "http://prometheus:9090"
    },
    "Alerting": {
      "Enabled": true,
      "PagerDuty": {
        "RoutingKey": "PD_ROUTING_KEY_PLACEHOLDER"
      }
    }
  },

  "ErrorRecovery": {
    "MaxRetryCount": 5,
    "DeadLetterQueue": "palette.dlq",
    "CompensationTimeout": "00:10:00",
    "CircuitBreaker": {
      "FailureThreshold": 0.2,
      "MinimumThroughput": 25,
      "DurationOfBreak": "00:01:00"
    }
  },

  "DataQuality": {
    "Enabled": true,
    "StopOnFailure": false,
    "ProfilingSampleSize": 10000,
    "Rules": {
      "AllowNulls": false,
      "NumericRange": {
        "Min": 0,
        "Max": 1000000
      }
    }
  },

  "Visualization": {
    "BlazorGallery": {
      "BaseUrl": "https://gallery.palettestream.io",
      "ApiKey": "BLAZOR_GALLERY_API_KEY_PLACEHOLDER"
    }
  },

  "OpenTelemetry": {
    "Tracing": {
      "Exporter": "jaeger",
      "Jaeger": {
        "AgentHost": "jaeger",
        "AgentPort": 6831
      }
    },
    "Metrics": {
      "Exporter": "prometheus",
      "Prometheus": {
        "Endpoint": "http://0.0.0.0:9464/metrics/"
      }
    }
  },

  "HealthChecks": {
    "Publish": true,
    "UI": {
      "Endpoint": "/health-ui",
      "EvaluationTimeOnSeconds": 15
    },
    "Liveness": {
      "Tags": [ "ready" ],
      "Path": "/health/ready"
    },
    "Readiness": {
      "Tags": [ "live" ],
      "Path": "/health/live"
    }
  }
}