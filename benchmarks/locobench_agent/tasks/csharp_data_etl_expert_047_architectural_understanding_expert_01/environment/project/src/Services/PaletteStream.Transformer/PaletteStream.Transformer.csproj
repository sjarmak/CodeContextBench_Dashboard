```xml
<Project Sdk="Microsoft.NET.Sdk">

  <!--────────────────────────────────────────────────────────────────────────────
      PaletteStream.Transformer
      Project: PaletteStream ETL Canvas (data_etl)
      Description:
        Micro-service responsible for data “pigment” transformation.  Supports
        both streaming (Kafka) and batch (Hangfire) workloads, GPU-accelerated
        vectorized executions (ComputeSharp + Apache Arrow), and exposes rich
        observability (Serilog, HealthChecks).  This .csproj is crafted to be
        production-ready, enabling nullable reference types, analyzers,
        SourceLink, trimming, and deterministic builds.
  ────────────────────────────────────────────────────────────────────────────-->

  <PropertyGroup>
    <!-- Target modern .NET. -->
    <TargetFramework>net8.0</TargetFramework>
    <!-- Enable C# 12 preview features (required for some ComputeSharp samples). -->
    <LangVersion>preview</LangVersion>

    <!-- Quality gates -->
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <AnalysisLevel>latest-preview</AnalysisLevel>

    <!-- Release-build optimizations -->
    <PublishReadyToRun>true</PublishReadyToRun>
    <PublishTrimmed>true</PublishTrimmed>
    <Deterministic>true</Deterministic>
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>

    <!-- Generate SourceLink symbols for GitHub. -->
    <EnableSourceControlManagerQueries>true</EnableSourceControlManagerQueries>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
  </PropertyGroup>

  <!--────────────────────────────── Dependencies ──────────────────────────────-->
  <ItemGroup>
    <!-- Streaming -->
    <PackageReference Include="Confluent.Kafka"             Version="2.3.0" />

    <!-- Batch / Scheduling -->
    <PackageReference Include="Hangfire.Core"               Version="1.7.36" />
    <PackageReference Include="Hangfire.SqlServer"          Version="1.7.36" />

    <!-- GPU & Columnar data processing -->
    <PackageReference Include="ComputeSharp"                Version="2.2.0" />
    <PackageReference Include="Apache.Arrow"                Version="14.0.0" />

    <!-- Resilience / Fault-handling -->
    <PackageReference Include="Polly"                       Version="8.1.2" />

    <!-- Observability / Logging / Monitoring -->
    <PackageReference Include="Serilog.AspNetCore"          Version="7.0.0" />
    <PackageReference Include="Serilog.Sinks.Seq"           Version="5.1.3" />
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="8.0.0" />

    <!-- Application composition -->
    <PackageReference Include="MediatR.Extensions.Microsoft.DependencyInjection" Version="10.0.1" />
    <PackageReference Include="AutoMapper.Extensions.Microsoft.DependencyInjection" Version="12.0.1" />

    <!-- Configuration & Secrets -->
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="8.0.0" />

    <!-- Build tooling -->
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.2.0" PrivateAssets="All" />
  </ItemGroup>

  <!--───────────────────────────── Analyzers & Style ──────────────────────────-->
  <ItemGroup>
    <!-- Custom or external Roslyn analyzers can be dropped into /analyzers. -->
    <Analyzer Include="$(MSBuildProjectDirectory)\analyzers\*.dll" />
  </ItemGroup>

  <!--───────────────────────────── Platform Targets ───────────────────────────-->
  <ItemGroup>
    <!-- Reference the core runtime (explicit for clarity). -->
    <FrameworkReference Include="Microsoft.NETCore.App" />
  </ItemGroup>

  <!--───────────────────────────── Build Events ───────────────────────────────-->
  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <!-- Example: code-generation, schema compilation, etc. -->
    <!-- <Exec Command="dotnet tool run protobuf-codegen" /> -->
  </Target>

</Project>
