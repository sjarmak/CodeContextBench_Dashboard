```xml
<Project Sdk="Microsoft.NET.Sdk">

  <!--
    PaletteStream.Shared.Models
    ---------------------------------------------------------
    Shared domain primitives and DTOs that flow through the
    PaletteStream ETL Canvas.  This project must remain
    dependency–light and cross-framework compatible because
    it is referenced by micro-services, batch jobs, and
    Blazor dashboards alike.
  -->

  <PropertyGroup>
    <!-- Target multiple frameworks for broad reuse  -->
    <TargetFrameworks>net8.0;netstandard2.1</TargetFrameworks>

    <!-- Enable modern C# features and strictness         -->
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>

    <!-- Build & packaging metadata                      -->
    <AssemblyName>PaletteStream.Shared.Models</AssemblyName>
    <Version>1.3.0</Version>
    <Description>Shared domain models for the PaletteStream ETL Canvas platform.</Description>
    <Company>PaletteStream</Company>
    <Authors>PaletteStream Engineering</Authors>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/PaletteStream/ETL-Canvas</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>ETL;Data;Domain;Microservices;PaletteStream</PackageTags>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <!--
    Code-quality analyzers
    (PrivateAssets=all ensures they don't propagate transitively)
  -->
  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="8.0.0" PrivateAssets="all" />
    <PackageReference Include="StyleCop.Analyzers"             Version="1.2.0-beta.506" PrivateAssets="all" />
  </ItemGroup>

  <!--
    Minimal, framework-agnostic dependencies
  -->
  <ItemGroup>
    <!-- High-performance JSON (de)serialization -->
    <PackageReference Include="System.Text.Json"               Version="8.0.2" />

    <!-- Validation attributes & reflection helpers -->
    <PackageReference Include="System.ComponentModel.Annotations" Version="8.0.0" />

    <!-- Lightweight ADO / mapping for occasional SQL calls -->
    <PackageReference Include="Dapper"                         Version="2.0.123" />

    <!-- Fluent business-rule validation for DTOs            -->
    <PackageReference Include="FluentValidation"               Version="11.8.0" />

    <!-- Zero-alloc strongly-typed IDs (GUID/ULID/Int/…)      -->
    <PackageReference Include="StronglyTypedId"                Version="1.5.0" />
  </ItemGroup>

  <!--
    Build messages & hooks
  -->
  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Message Importance="high"
             Text="▶️  Building PaletteStream.Shared.Models (${Configuration}|${TargetFramework})…" />
  </Target>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Message Importance="high"
             Text="✅ PaletteStream.Shared.Models build complete." />
  </Target>

</Project>
```