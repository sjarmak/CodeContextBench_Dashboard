```xml
<Project Sdk="Microsoft.NET.Sdk">

  <!-- ============================================================
       PaletteStream.Shared.Events
       ------------------------------------------------------------
       This project hosts strongly-typed domain, integration, and
       notification events shared across the PaletteStream ETL
       Canvas micro-service mesh.  All event contracts must be
       immutable and serializable with both JSON and MessagePack.
       ============================================================ -->
       
  <PropertyGroup>
    <!-- Multi-target so library can be consumed by cloud functions,
         desktop admin tools, and in-process test projects. -->
    <TargetFrameworks>net8.0;netstandard2.1</TargetFrameworks>

    <!-- C# 12 with nullable reference types & implicit usings. -->
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- Ship XML docs + deterministic builds for reliable packages. -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Deterministic>true</Deterministic>

    <!-- Fail the build on any compiler warning. -->
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>

    <!-- NuGet metadata -->
    <PackageId>PaletteStream.Shared.Events</PackageId>
    <Authors>PaletteStream Engineering</Authors>
    <Company>PaletteStream</Company>
    <PackageDescription>Shared domain & integration events for the PaletteStream ETL Canvas.</PackageDescription>
    <PackageTags>ETL;EventSourcing;DomainEvents;MediatR;Kafka;ObserverPattern</PackageTags>
    <RepositoryUrl>https://github.com/PaletteStream/PaletteStream-ETL-Canvas</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
  </PropertyGroup>

  <!-- -----------------------------------------------------------------
       Package References
       ----------------------------------------------------------------- -->
  <ItemGroup>
    <!-- Event dispatching / mediator pattern -->
    <PackageReference Include="MediatR" Version="12.1.1" />

    <!-- High-performance binary serialization, optional compression -->
    <PackageReference Include="MessagePack" Version="2.6.101" />

    <!-- JSON serialization (System.Text.Json extensions) -->
    <PackageReference Include="System.Text.Json" Version="8.0.2" />

    <!-- Validation of incoming / outgoing event payloads -->
    <PackageReference Include="FluentValidation" Version="11.7.1" />

    <!-- Guard clauses for defensive programming -->
    <PackageReference Include="Ardalis.GuardClauses" Version="4.3.0" />

    <!-- Logging Abstractions so events can emit log scopes -->
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.0" />
  </ItemGroup>

  <!-- -----------------------------------------------------------------
       Development-time analyzers & code-quality tooling
       (PrivateAssets=all keeps them out of the NuGet package)
       ----------------------------------------------------------------- -->
  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers"
                      Version="3.3.4"
                      PrivateAssets="all" />
    <PackageReference Include="StyleCop.Analyzers"
                      Version="1.2.0-beta.435"
                      PrivateAssets="all" />
  </ItemGroup>

  <!-- -----------------------------------------------------------------
       Internals visible to test project so we can validate private
       helpers without relaxing encapsulation in production builds.
       ----------------------------------------------------------------- -->
  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>PaletteStream.Shared.Events.Tests</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

</Project>
