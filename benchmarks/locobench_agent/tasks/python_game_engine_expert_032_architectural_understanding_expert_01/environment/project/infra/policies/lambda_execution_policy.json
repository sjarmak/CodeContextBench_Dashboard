{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CreateAndWriteLambdaLogs",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": [
        "arn:aws:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/ledgerquest-*:*"
      ]
    },
    {
      "Sid": "XRayTracing",
      "Effect": "Allow",
      "Action": [
        "xray:PutTraceSegments",
        "xray:PutTelemetryRecords"
      ],
      "Resource": ["*"]
    },
    {
      "Sid": "DynamoDBGameStateAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:PutItem",
        "dynamodb:GetItem",
        "dynamodb:UpdateItem",
        "dynamodb:BatchWriteItem",
        "dynamodb:Query",
        "dynamodb:Scan"
      ],
      "Resource": [
        "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/ledgerquest-*"
      ]
    },
    {
      "Sid": "S3GameAssetsAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject"
      ],
      "Resource": [
        "arn:aws:s3:::ledgerquest-assets-${AWS::AccountId}/*",
        "arn:aws:s3:::ledgerquest-savedgames-${AWS::AccountId}/*"
      ]
    },
    {
      "Sid": "S3ListBucketsLimited",
      "Effect": "Allow",
      "Action": "s3:ListBucket",
      "Resource": [
        "arn:aws:s3:::ledgerquest-assets-${AWS::AccountId}",
        "arn:aws:s3:::ledgerquest-savedgames-${AWS::AccountId}"
      ],
      "Condition": {
        "StringLike": {
          "s3:prefix": [
            "assets/*",
            "saved-games/*"
          ]
        }
      }
    },
    {
      "Sid": "PublishGameplayEvents",
      "Effect": "Allow",
      "Action": "events:PutEvents",
      "Resource": "arn:aws:events:${AWS::Region}:${AWS::AccountId}:event-bus/ledgerquest-bus"
    },
    {
      "Sid": "InvokeStepFunctionsStateMachines",
      "Effect": "Allow",
      "Action": [
        "states:StartExecution",
        "states:DescribeExecution"
      ],
      "Resource": [
        "arn:aws:states:${AWS::Region}:${AWS::AccountId}:stateMachine:ledgerquest-*"
      ]
    },
    {
      "Sid": "ReadRuntimeSecrets",
      "Effect": "Allow",
      "Action": [
        "secretsmanager:GetSecretValue"
      ],
      "Resource": [
        "arn:aws:secretsmanager:${AWS::Region}:${AWS::AccountId}:secret:ledgerquest/*"
      ]
    },
    {
      "Sid": "DecryptWithKMS",
      "Effect": "Allow",
      "Action": [
        "kms:Decrypt"
      ],
      "Resource": [
        "arn:aws:kms:${AWS::Region}:${AWS::AccountId}:key/${LedgerQuestKmsKeyId}"
      ],
      "Condition": {
        "StringEquals": {
          "kms:ViaService": "secretsmanager.${AWS::Region}.amazonaws.com"
        }
      }
    },
    {
      "Sid": "SQSQueueInteractions",
      "Effect": "Allow",
      "Action": [
        "sqs:SendMessage",
        "sqs:ReceiveMessage",
        "sqs:DeleteMessage",
        "sqs:GetQueueAttributes"
      ],
      "Resource": [
        "arn:aws:sqs:${AWS::Region}:${AWS::AccountId}:ledgerquest-*"
      ]
    },
    {
      "Sid": "RestrictPassRole",
      "Effect": "Allow",
      "Action": "iam:PassRole",
      "Resource": "arn:aws:iam::${AWS::AccountId}:role/ledgerquest-*",
      "Condition": {
        "StringEquals": {
          "iam:PassedToService": [
            "lambda.amazonaws.com",
            "states.amazonaws.com"
          ]
        }
      }
    }
  ]
}