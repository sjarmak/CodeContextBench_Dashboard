{
  "plugin_id": "com.flockdesk.plugin.code_review",
  "name": "Code Review Panel",
  "version": "1.2.0",
  "description": "Interactive code-review panel that enables diff annotations, inline comments, and real-time approvals within FlockDesk sessions.",
  "entry_point": "code_review_plugin.main:CodeReviewPlugin",
  "framework_version": ">=2.5.0,<3.0.0",
  "min_app_version": "0.9.0",
  "authors": [
    {
      "name": "FlockDesk Core Team",
      "email": "core@flockdesk.io",
      "url": "https://flockdesk.io"
    }
  ],
  "license": "Apache-2.0",
  "keywords": [
    "code review",
    "development workflow",
    "collaboration",
    "plugin"
  ],
  "homepage": "https://flockdesk.io/plugins/code-review",
  "issue_tracker": "https://github.com/flockdesk/flockdesk/issues",
  "icon": "resources/icons/code_review_plugin.svg",
  "capabilities": {
    "ui_panels": [
      {
        "id": "code_review.panel.diff_view",
        "label": "Diff View",
        "shortcut": "Ctrl+Shift+D",
        "dock_area": "right"
      },
      {
        "id": "code_review.panel.comment_feed",
        "label": "Comments",
        "shortcut": "Ctrl+Shift+C",
        "dock_area": "bottom"
      }
    ],
    "commands": [
      {
        "command": "code_review.open_file_diff",
        "title": "Open File Diff",
        "tooltip": "Open diff viewer for selected file",
        "shortcut": "Ctrl+Alt+D"
      },
      {
        "command": "code_review.request_review",
        "title": "Request Review",
        "tooltip": "Request code review from selected peers",
        "shortcut": "Ctrl+Alt+R"
      },
      {
        "command": "code_review.toggle_panel",
        "title": "Toggle Code Review Panel",
        "tooltip": "Show or hide the review panel",
        "shortcut": "Ctrl+Shift+R"
      }
    ],
    "event_subscriptions": [
      "workspace.file.selected",
      "git_repository.branch_changed",
      "presence.user.status_changed"
    ]
  },
  "permissions": {
    "file_system": {
      "read": [
        "${workspaceRoot}/**/*.py",
        "${workspaceRoot}/**/*.js",
        "${workspaceRoot}/**/*.java",
        "${workspaceRoot}/**/*.cpp"
      ]
    },
    "network": {
      "domains": [
        "api.github.com",
        "gitlab.com",
        "bitbucket.org"
      ]
    },
    "ipc_channels": [
      "code_review_plugin"
    ]
  },
  "settings_schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Code Review Plugin Settings",
    "type": "object",
    "properties": {
      "default_diff_view": {
        "type": "string",
        "enum": ["side-by-side", "inline"],
        "default": "side-by-side",
        "description": "Preferred layout for diff viewer."
      },
      "auto_request_reviewers": {
        "type": "boolean",
        "default": true,
        "description": "Automatically suggest reviewers based on commit history."
      },
      "theme": {
        "type": "string",
        "enum": ["light", "dark", "system"],
        "default": "system",
        "description": "Theme used in code review panels."
      },
      "show_whitespace": {
        "type": "boolean",
        "default": false,
        "description": "Highlight whitespace changes in diffs."
      }
    },
    "additionalProperties": false
  },
  "runtime": {
    "python": ">=3.9,<3.12",
    "system": [
      "Windows >=10",
      "macOS >=12",
      "Linux >=5.10"
    ],
    "architecture": [
      "x86_64",
      "arm64"
    ]
  },
  "update": {
    "strategy": "semver",
    "auto_check": true,
    "source": {
      "type": "github",
      "repo": "flockdesk/code_review_plugin",
      "channel": "releases"
    }
  },
  "integrity": {
    "hash": "sha256-PLACEHOLDER",
    "signature": "-----BEGIN PGP SIGNATURE-----\nPLACEHOLDER\n-----END PGP SIGNATURE-----"
  }
}