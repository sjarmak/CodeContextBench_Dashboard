{
  "$schema": "https://schemas.flockdesk.io/layout/v1.json",
  "_generated": "2024-10-06T12:00:00Z",
  "_description": "Default desktop layout shipped with FlockDesk. The file is auto-migrated whenever the internal layout schema bumps the minor version. Manual edits are preserved unless they conflict with the migration rules.",
  "version": 1,
  "viewport": {
    "geometry": {
      "x": 0,
      "y": 0,
      "width": 1920,
      "height": 1080
    },
    "virtualScreens": 1,
    "dpiAware": true
  },
  "theme": {
    "active": "flockdesk_dark",
    "fallback": "flockdesk_light",
    "allowsRuntimeSwitch": true,
    "followSystem": false,
    "highDpiScaling": "auto"
  },
  "keyboard": {
    "scheme": "flockdesk_default",
    "editInPlace": true,
    "shortcuts": {
      "global.toggle_quick_switcher": "Ctrl+K",
      "global.open_settings": "Ctrl+,",
      "chat.send_message": "Enter",
      "chat.new_line": "Shift+Enter",
      "whiteboard.toggle_pen": "P",
      "whiteboard.toggle_eraser": "E",
      "code_review.approve": "Ctrl+Shift+Y",
      "code_review.request_changes": "Ctrl+Shift+X"
    }
  },
  "autoSave": {
    "enabled": true,
    "intervalSec": 45,
    "cloudSync": {
      "provider": "flock_cloud",
      "endpoint": "https://api.flockdesk.io/v1/sync",
      "twoWay": true
    }
  },
  "windows": [
    {
      "id": "primary_chat",
      "title": "Team Chat",
      "plugin": "flock.chat",
      "type": "regular",
      "geometry": {
        "x": 0,
        "y": 24,
        "width": 450,
        "height": 1056
      },
      "docked": "left",
      "state": {
        "activeChannel": "general",
        "unreadListCollapsed": false
      }
    },
    {
      "id": "presence_panel",
      "title": "Presence",
      "plugin": "flock.presence",
      "type": "dockable",
      "geometry": {
        "x": 450,
        "y": 24,
        "width": 225,
        "height": 400
      },
      "docked": "right-top",
      "state": {
        "filter": "onlineOnly"
      }
    },
    {
      "id": "whiteboard_canvas",
      "title": "Whiteboard",
      "plugin": "flock.whiteboard",
      "type": "regular",
      "geometry": {
        "x": 675,
        "y": 24,
        "width": 1245,
        "height": 1056
      },
      "docked": null,
      "state": {
        "canvasId": "default",
        "tool": "pen",
        "color": "#ff0066"
      }
    },
    {
      "id": "dashboard",
      "title": "Community Dashboard",
      "plugin": "flock.dashboard",
      "type": "tabbed",
      "geometry": {
        "x": 450,
        "y": 424,
        "width": 225,
        "height": 656
      },
      "docked": "right-bottom",
      "tabs": [
        {
          "id": "stats",
          "title": "Stats",
          "plugin": "flock.analytics",
          "state": {
            "range": "7d"
          }
        },
        {
          "id": "files",
          "title": "Files",
          "plugin": "flock.file_sharing",
          "state": {
            "sortBy": "modified"
          }
        }
      ],
      "state": {
        "activeTab": 0
      }
    }
  ],
  "docks": {
    "left": [
      "primary_chat"
    ],
    "right-top": [
      "presence_panel"
    ],
    "right-bottom": [
      "dashboard"
    ]
  },
  "plugins": {
    "flock.chat": {
      "enabled": true,
      "version": "2.4.1",
      "updateChannel": "stable"
    },
    "flock.whiteboard": {
      "enabled": true,
      "version": "1.9.0",
      "updateChannel": "stable"
    },
    "flock.dashboard": {
      "enabled": true,
      "version": "0.8.3",
      "updateChannel": "beta"
    },
    "flock.presence": {
      "enabled": true,
      "version": "1.6.2",
      "updateChannel": "stable"
    },
    "flock.analytics": {
      "enabled": false,
      "version": "1.0.0",
      "updateChannel": "alpha"
    },
    "flock.file_sharing": {
      "enabled": true,
      "version": "1.3.5",
      "updateChannel": "stable"
    }
  },
  "eventBindings": {
    "presence.user_status_changed": [
      {
        "target": "primary_chat",
        "action": "updateUserStatus"
      },
      {
        "target": "dashboard",
        "action": "refreshPresenceStats"
      }
    ],
    "file.upload_completed": [
      {
        "target": "dashboard",
        "action": "addRecentFileEntry",
        "args": {
          "showToast": true
        }
      }
    ]
  },
  "crashReporting": {
    "enabled": true,
    "provider": "sentry",
    "dsn": "https://examplePublicKey@o0.ingest.sentry.io/0",
    "project": "flockdesk_desktop",
    "sampleRate": 0.2
  },
  "updates": {
    "autoInstall": true,
    "channel": "stable",
    "notifyUser": true,
    "suspendWhileActiveSession": true
  },
  "privacy": {
    "telemetry": {
      "enabled": true,
      "anonymizeUser": true,
      "collectionLevel": "basic"
    }
  }
}