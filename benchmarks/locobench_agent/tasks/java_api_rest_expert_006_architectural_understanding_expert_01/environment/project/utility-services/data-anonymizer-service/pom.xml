<?xml version="1.0" encoding="UTF-8"?>
<!--
  ~  OpsForge Utility Nexus :: Data-Anonymizer Service
  ~  Hexagonal-architecture microservice that provides data masking / pseudonymisation
  ~  capabilities exposed via REST and GraphQL endpoints.
  ~
  ~  Copyright (c) 2024 OpsForge.
  ~  SPDX-License-Identifier: Apache-2.0
  -->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <!-- Spring Boot parent brings sensible defaults & dependency management -->
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.2.5</version>
        <relativePath/> <!-- lookup on central -->
    </parent>

    <groupId>com.opsforge.utility</groupId>
    <artifactId>data-anonymizer-service</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>OpsForge Utility :: Data-Anonymizer Service</name>
    <description>Microservice that anonymizes PII in datasets with reversible tokenization, hashing,
        masking and synthetic data generation. REST + GraphQL fa√ßade, built with strict hexagonal architecture.
    </description>
    <url>https://github.com/opsforge/utility-nexus</url>

    <!-- ============================================================ -->
    <!--                       GLOBAL PROPERTIES                      -->
    <!-- ============================================================ -->
    <properties>
        <java.version>17</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <!-- Versions managed explicitly (overrides Spring Boot BOM where needed)  -->
        <mapstruct.version>1.5.5.Final</mapstruct.version>
        <lombok.version>1.18.32</lombok.version>
        <resilience4j.version>2.2.0</resilience4j.version>
        <testcontainers.version>1.19.7</testcontainers.version>
        <junit.jupiter.version>5.10.2</junit.jupiter.version>
        <springdoc.version>2.5.0</springdoc.version>
        <graphql-java.version>22.0</graphql-java.version>
        <maven.compiler.plugin.version>3.12.1</maven.compiler.plugin.version>
        <jacoco.plugin.version>0.8.12</jacoco.plugin.version>
        <jib.plugin.version>3.4.0</jib.plugin.version>
    </properties>

    <!-- ============================================================ -->
    <!--                      DEPENDENCY SECTION                      -->
    <!-- ============================================================ -->
    <dependencies>
        <!-- ------------- Spring Boot Starters ------------- -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-validation</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-cache</artifactId>
        </dependency>

        <!-- ------------- GraphQL ------------- -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-graphql</artifactId>
        </dependency>

        <!-- ------------- OpenAPI / Swagger ------------- -->
        <dependency>
            <groupId>org.springdoc</groupId>
            <artifactId>springdoc-openapi-starter-webmvc-ui</artifactId>
            <version>${springdoc.version}</version>
        </dependency>

        <!-- ------------- Mapping & Code Generation ------------- -->
        <dependency>
            <groupId>org.mapstruct</groupId>
            <artifactId>mapstruct</artifactId>
            <version>${mapstruct.version}</version>
        </dependency>

        <!-- ------------- Resilience4j for circuit-breaking / retries ------------- -->
        <dependency>
            <groupId>io.github.resilience4j</groupId>
            <artifactId>resilience4j-spring-boot3</artifactId>
            <version>${resilience4j.version}</version>
        </dependency>

        <!-- ------------- Cache Providers ------------- -->
        <dependency>
            <groupId>com.github.ben-manes.caffeine</groupId>
            <artifactId>caffeine</artifactId>
        </dependency>

        <!-- ------------- Lombok (compile-time only) ------------- -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>${lombok.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- ------------- Observability ------------- -->
        <dependency>
            <groupId>io.micrometer</groupId>
            <artifactId>micrometer-registry-prometheus</artifactId>
        </dependency>

        <!-- ===================================================== -->
        <!--                   TEST DEPENDENCIES                   -->
        <!-- ===================================================== -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
            <exclusions>
                <exclusion>
                    <groupId>org.junit.vintage</groupId>
                    <artifactId>junit-vintage-engine</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>org.testcontainers</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>${testcontainers.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.testcontainers</groupId>
            <artifactId>postgresql</artifactId>
            <version>${testcontainers.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <!-- ============================================================ -->
    <!--                         BUILD SETUP                          -->
    <!-- ============================================================ -->
    <build>
        <plugins>

            <!-- ---------- Compiler plugin with mapstruct / lombok APT ---------- -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven.compiler.plugin.version}</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <encoding>${project.build.sourceEncoding}</encoding>
                    <compilerArgs>
                        <arg>-Amapstruct.defaultComponentModel=spring</arg>
                    </compilerArgs>
                    <annotationProcessorPaths>
                        <path>
                            <groupId>org.mapstruct</groupId>
                            <artifactId>mapstruct-processor</artifactId>
                            <version>${mapstruct.version}</version>
                        </path>
                        <path>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                            <version>${lombok.version}</version>
                        </path>
                    </annotationProcessorPaths>
                </configuration>
            </plugin>

            <!-- ---------- Spring Boot repackage plugin ---------- -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <mainClass>com.opsforge.utility.dataanonymizer.DataAnonymizerApplication</mainClass>
                    <layers>
                        <!-- Build layered JAR for efficient Docker caching -->
                        <enabled>true</enabled>
                    </layers>
                </configuration>
            </plugin>

            <!-- ---------- Code coverage ---------- -->
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>${jacoco.plugin.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>report</id>
                        <phase>test</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- ---------- Docker-less OCI image build ---------- -->
            <plugin>
                <groupId>com.google.cloud.tools</groupId>
                <artifactId>jib-maven-plugin</artifactId>
                <version>${jib.plugin.version}</version>
                <configuration>
                    <from>
                        <image>eclipse-temurin:17-jre-alpine</image>
                    </from>
                    <to>
                        <image>registry.opsforge.com/utility/data-anonymizer:${project.version}</image>
                    </to>
                    <container>
                        <creationTime>USE_CURRENT_TIMESTAMP</creationTime>
                        <jvmFlags>
                            <jvmFlag>-XX:+UseContainerSupport</jvmFlag>
                            <jvmFlag>-XX:+UseStringDeduplication</jvmFlag>
                        </jvmFlags>
                        <environment>
                            <SPRING_PROFILES_ACTIVE>prod</SPRING_PROFILES_ACTIVE>
                        </environment>
                        <ports>
                            <port>8080</port>
                        </ports>
                    </container>
                </configuration>
            </plugin>

        </plugins>
    </build>

    <!-- ============================================================ -->
    <!--                         PROFILES                             -->
    <!-- ============================================================ -->
    <profiles>
        <!-- Production profile toggles optimisations & AOT native hints -->
        <profile>
            <id>prod</id>
            <activation>
                <property>
                    <name>env</name>
                    <value>prod</value>
                </property>
            </activation>
            <properties>
                <!-- Activate stricter compiler flags in prod -->
                <maven.compiler.showWarnings>true</maven.compiler.showWarnings>
                <maven.compiler.failOnWarning>true</maven.compiler.failOnWarning>
            </properties>
            <build>
                <plugins>
                    <!-- Optional: enable Spring Boot's ahead-of-time (AOT) optimisation -->
                    <plugin>
                        <groupId>org.springframework.experimental</groupId>
                        <artifactId>spring-aot-maven-plugin</artifactId>
                        <version>0.14.1</version>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <!-- ============================================================ -->
    <!--                      DISTRIBUTION MGMT                       -->
    <!-- ============================================================ -->
    <distributionManagement>
        <snapshotRepository>
            <id>opsforge-snapshots</id>
            <url>https://artifacts.opsforge.com/maven/snapshots</url>
        </snapshotRepository>
        <repository>
            <id>opsforge-releases</id>
            <url>https://artifacts.opsforge.com/maven/releases</url>
        </repository>
    </distributionManagement>

</project>
```