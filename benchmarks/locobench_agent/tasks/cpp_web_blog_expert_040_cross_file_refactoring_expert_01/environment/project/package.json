{
  "name": "@intraleder/blogsuite-web",
  "version": "1.0.0",
  "description": "IntraLedger BlogSuite â€” enterprise-grade blogging & knowledge-commerce frontend bundle",
  "private": true,
  "license": "BUSL-1.1",
  "author": {
    "name": "IntraLedger Engineering",
    "email": "engineering@intraleder.io",
    "url": "https://intraleder.io"
  },
  "homepage": "https://intraleder.io/blogsuite",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/intraleder/blogsuite.git",
    "directory": "web_blog"
  },
  "engines": {
    "node": ">=18.14.0",
    "npm": ">=9.3.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "Safari >= 14",
    "not dead"
  ],
  "scripts": {
    "clean": "rimraf dist build coverage .cache",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --max-warnings 0",
    "format": "prettier --write \"{src,tests}/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "prepare": "husky install",
    "prebuild": "npm run clean && node scripts/check-env.js",
    "build:dev": "webpack --config build/webpack.dev.js --progress",
    "build:prod": "webpack --config build/webpack.prod.js --progress --env production",
    "start": "webpack serve --config build/webpack.dev.js --hot --port 3000",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "analyze": "webpack --config build/webpack.prod.js --profile --json > build/stats.json && webpack-bundle-analyzer build/stats.json",
    "deploy": "node scripts/deploy-s3.js",
    "postinstall": "node scripts/embed-assets.js"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "@tanstack/react-query": "^4.29.10",
    "axios": "^1.5.1",
    "classnames": "^2.3.2",
    "dayjs": "^1.11.9",
    "i18next": "^23.4.2",
    "i18next-browser-languagedetector": "^7.0.1",
    "lodash": "^4.17.21",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^1.3.0",
    "react-redux": "^8.1.2",
    "react-router-dom": "^6.15.0",
    "slate": "^0.93.0",
    "slate-react": "^0.93.0",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.23.2",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.7.1",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^9.1.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "sass": "^1.69.4",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "cmake": {
      "outputDir": "dist",
      "resourceHeader": "web_resources.hpp"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setupTests.ts"
    ]
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://registry.npmjs.org/"
  }
}