@page "/dashboard"
@using CanvasCraft.WebApp.Services
@using CanvasCraft.WebApp.Models
@using CanvasCraft.WebApp.Components.Shared
@using ChartJs.Blazor.BarChart
@using ChartJs.Blazor.Common
@using ChartJs.Blazor.Common.Axes.Ticks
@using ChartJs.Blazor.Util
@inject IExperimentService ExperimentService
@inject IModelRegistryService ModelRegistryService
@inject IModelDriftNotifier DriftNotifier
@inject NavigationManager Navigation
@inject ILogger<Dashboard> Logger

<!--
    Dashboard.razor
    ----------------
    Main landing surface for ML Studio users. Presents:
        • Recently-run experiments with key metrics
        • Model registry status (latest checkpoints, prod/staging tags)
        • Real-time drift alerts
        • Quick actions for creating / cloning experiments
    This file mixes Razor markup with C# code-behind following Blazor best practices.
-->

<PageTitle>CanvasCraft • Dashboard</PageTitle>

<div class="container-fluid py-4">

    <!-- Header / Toolbar -->
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="fw-bold mb-0">
            <i class="bi bi-easel3-fill text-primary"></i>
            Creative Dashboard
        </h1>

        <div class="d-flex gap-2">
            <input class="form-control"
                   placeholder="Search experiments…"
                   @bind="SearchTerm"
                   @bind:event="oninput" />

            <button class="btn btn-outline-secondary"
                    title="Refresh"
                    @onclick="RefreshAsync"
                    disabled="@IsBusy">
                <span class="spinner-border spinner-border-sm" role="status" hidden="@(IsBusy is false)"></span>
                <i class="bi bi-arrow-clockwise" hidden="@IsBusy"></i>
            </button>

            <button class="btn btn-primary"
                    @onclick="()=>Navigation.NavigateTo("/experiments/new")">
                <i class="bi bi-plus-lg"></i> New Experiment
            </button>
        </div>
    </div>

    <!-- Drift alert toast -->
    @if (ShowDriftAlert)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            Model drift detected on deployment <strong>@DriftedDeploymentName</strong> &mdash;
            <a href="@($"/deployments/{DriftedDeploymentId}")" class="alert-link">investigate</a>.
            <button type="button" class="btn-close" @onclick="()=>ShowDriftAlert=false"></button>
        </div>
    }

    <!-- Main grid -->
    <div class="row g-4">

        <!-- Experiments column -->
        <div class="col-12 col-lg-7">
            <div class="card shadow-sm h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Experiments</h5>
                    <a class="small text-decoration-none" href="/experiments">See all</a>
                </div>

                <div class="card-body table-responsive p-0">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Dataset</th>
                                <th scope="col">Accuracy</th>
                                <th scope="col">Updated</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (IsBusy)
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-5">
                                        <div class="spinner-border text-primary"></div>
                                    </td>
                                </tr>
                            }
                            else if (FilteredExperiments.Count == 0)
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-5 text-muted">
                                        No experiments found.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var exp in FilteredExperiments)
                                {
                                    <tr>
                                        <td>
                                            <a href="@($"/experiments/{exp.Id}")" class="text-decoration-none fw-semibold">
                                                @exp.Name
                                            </a>
                                        </td>
                                        <td>@exp.DatasetName</td>
                                        <td>
                                            @if (exp.AccuracyMetric.HasValue)
                                            {
                                                <span class="badge bg-success">@($"{exp.AccuracyMetric:P2}")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">—</span>
                                            }
                                        </td>
                                        <td>@exp.UpdatedAt.ToLocalTime().Humanize(culture: System.Globalization.CultureInfo.CurrentCulture)</td>
                                        <td class="text-end">
                                            <button class="btn btn-sm btn-outline-secondary"
                                                    title="Clone"
                                                    @onclick="() => CloneExperimentAsync(exp.Id)">
                                                <i class="bi bi-files"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Model performance column -->
        <div class="col-12 col-lg-5">
            <div class="card shadow-sm h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Production Performance</h5>
                    <a class="small text-decoration-none" href="/models">Model registry</a>
                </div>

                <div class="card-body">
                    @if (PerformanceChartConfig is null)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary"></div>
                        </div>
                    }
                    else
                    {
                        <BarChart
                            Config="@PerformanceChartConfig"
                            Style="height:350px;width:100%;"></BarChart>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code
{
    /// <summary>
    /// Backing code for the Creative Dashboard page.
    /// Responsible for:
    ///     • Loading experiment summaries & model performance stats
    ///     • Subscribing to real-time drift notifications
    ///     • Handling UI interactions (search, refresh, clone)
    /// </summary>

    #region Fields / Properties

    private readonly CancellationTokenSource _disposeCts = new();
    private IList<ExperimentSummaryDto> _experiments = new List<ExperimentSummaryDto>();

    private bool IsBusy { get; set; }
    private string SearchTerm { get; set; } = string.Empty;
    private bool ShowDriftAlert { get; set; }
    private string? DriftedDeploymentName { get; set; }
    private Guid? DriftedDeploymentId { get; set; }

    private BarConfig? PerformanceChartConfig { get; set; }

    private IEnumerable<ExperimentSummaryDto> FilteredExperiments =>
        string.IsNullOrWhiteSpace(SearchTerm)
            ? _experiments
            : _experiments.Where(e =>
                    e.Name.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
                    e.DatasetName.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase))
                .ToList();

    #endregion

    #region Life-cycle

    protected override async Task OnInitializedAsync()
    {
        // Subscribe to drift events
        DriftNotifier.DriftDetected += OnDriftDetected;

        await LoadDashboardAsync();
    }

    public void Dispose()
    {
        DriftNotifier.DriftDetected -= OnDriftDetected;
        _disposeCts.Cancel();
        _disposeCts.Dispose();
    }

    #endregion

    #region Event Handlers

    private async Task RefreshAsync()
    {
        await LoadDashboardAsync();
    }

    private void OnDriftDetected(object? sender, ModelDriftEventArgs e)
    {
        // We deliberately avoid async void here; fire-and-forget is acceptable for UI alerts.
        InvokeAsync(() =>
        {
            DriftedDeploymentName = e.DeploymentName;
            DriftedDeploymentId = e.DeploymentId;
            ShowDriftAlert = true;
            StateHasChanged();
        });
    }

    private async Task CloneExperimentAsync(Guid experimentId)
    {
        try
        {
            IsBusy = true;
            var newId = await ExperimentService.CloneAsync(experimentId, _disposeCts.Token);
            Navigation.NavigateTo($"/experiments/{newId}");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to clone experiment {ExperimentId}", experimentId);
        }
        finally
        {
            IsBusy = false;
        }
    }

    #endregion

    #region Data Loading

    /// <summary>
    /// Concurrently loads experiments and performance data.
    /// </summary>
    private async Task LoadDashboardAsync()
    {
        try
        {
            IsBusy = true;

            var loadExperimentsTask = ExperimentService
                .GetRecentExperimentsAsync(limit: 20, _disposeCts.Token);

            var loadModelPerfTask = ModelRegistryService
                .GetProductionPerformanceAsync(days: 14, _disposeCts.Token);

            await Task.WhenAll(loadExperimentsTask, loadModelPerfTask);

            _experiments = (await loadExperimentsTask)
                .OrderByDescending(e => e.UpdatedAt)
                .ToList();

            BuildPerformanceChart(await loadModelPerfTask);
        }
        catch (OperationCanceledException)
        {
            // Normal during disposal/shutdown
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load dashboard data");
        }
        finally
        {
            IsBusy = false;
            StateHasChanged();
        }
    }

    private void BuildPerformanceChart(IReadOnlyList<ModelPerformanceDto> stats)
    {
        var config = new BarConfig
        {
            Options = new BarOptions
            {
                Responsive = true,
                Legend = new Legend
                {
                    Display = true,
                    Position = Position.Top
                },
                Scales = new BarScales
                {
                    XAxes = new List<CartesianAxis>
                    {
                        new CategoryAxis
                        {
                            Stacked = false
                        }
                    },
                    YAxes = new List<CartesianAxis>
                    {
                        new LinearCartesianAxis
                        {
                            Ticks = new LinearCartesianTicks
                            {
                                BeginAtZero = true,
                                Callback = (value, _) => $"{value:P0}"
                            }
                        }
                    }
                }
            }
        };

        var accuracyDataset = new BarDataset<double>
        {
            Label = "Accuracy",
            BackgroundColor = ColorUtil.FromDrawingColor(System.Drawing.Color.CornflowerBlue),
            BorderColor = ColorUtil.FromDrawingColor(System.Drawing.Color.CornflowerBlue),
            BorderWidth = 1
        };

        foreach (var item in stats)
        {
            config.Labels.Add(item.Date.ToString("MMM d"));
            accuracyDataset.Add(item.Accuracy * 100); // ChartJS expects raw numbers
        }

        config.Datasets.Add(accuracyDataset);
        PerformanceChartConfig = config;
    }

    #endregion
}