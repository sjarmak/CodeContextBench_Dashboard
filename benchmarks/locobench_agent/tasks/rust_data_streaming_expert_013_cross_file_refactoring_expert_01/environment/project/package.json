{
  "name": "@chirppulse/data-streaming",
  "version": "1.2.0",
  "description": "CLI, native bindings, and developer tooling for ChirpPulse â€“ the real-time social sentiment lake written in Rust.",
  "license": "Apache-2.0",
  "author": "ChirpPulse Engineering <oss@chirppulse.io>",
  "homepage": "https://github.com/chirppulse/chirppulse",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chirppulse/chirppulse.git"
  },
  "bugs": {
    "url": "https://github.com/chirppulse/chirppulse/issues"
  },
  "private": false,
  "type": "module",
  "engines": {
    "node": ">=18.17",
    "npm": ">=9.6"
  },
  "keywords": [
    "rust",
    "kafka",
    "iceberg",
    "etl",
    "realtime",
    "stream-processing",
    "sentiment-analysis",
    "social-media",
    "data-lake"
  ],
  "files": [
    "dist",
    "native/pkg"
  ],
  "main": "dist/index.js",
  "bin": {
    "chirppulse": "dist/cli.js"
  },
  "scripts": {
    "preinstall": "node ./scripts/verify-env.mjs",
    "prepare": "husky install",
    "clean": "rimraf dist native/target",
    "build": "npm run build:ts && npm run build:rust",
    "build:ts": "tsc --build tsconfig.json",
    "build:rust": "cargo build --release --manifest-path native/Cargo.toml && wasm-pack build --release --target nodejs native",
    "watch": "concurrently -k -r \"npm:watch:ts\" \"npm:watch:rust\"",
    "watch:ts": "tsc --build tsconfig.json --watch --preserveWatchOutput",
    "watch:rust": "cargo watch -w native/src -x \"build --release --manifest-path native/Cargo.toml\"",
    "start": "node dist/index.js",
    "lint": "eslint \"{src,test}/**/*.{ts,js}\"",
    "format": "prettier --write \"**/*.{js,ts,json,md,yml}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "docs": "typedoc --out docs src",
    "release": "semantic-release"
  },
  "config": {
    "rustTargetDir": "native/target"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.9.1",
    "@kafkajs/confluent-schema-registry": "^3.0.1",
    "ajv": "^8.12.0",
    "chalk": "^5.3.0",
    "commander": "^10.0.0",
    "dotenv": "^16.3.1",
    "execa": "^7.2.0",
    "fast-json-stable-stringify": "^2.1.0",
    "kafkajs": "^2.2.4",
    "node-rdkafka": "^2.15.0",
    "pino": "^8.15.0",
    "prom-client": "^14.2.0",
    "protobufjs": "^7.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.22.20",
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/chalk": "^4.1.2",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "cargo-watch": "^0.1.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.1",
    "semantic-release": "^23.0.2",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.8",
    "typescript": "^5.2.2",
    "vitest": "^0.34.4",
    "wasm-pack": "^0.12.1"
  },
  "optionalDependencies": {
    "@wasm-tool/wasm-pack-plugin": "^2.3.1"
  },
  "lint-staged": {
    "*.{js,ts,json,md,yml}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}