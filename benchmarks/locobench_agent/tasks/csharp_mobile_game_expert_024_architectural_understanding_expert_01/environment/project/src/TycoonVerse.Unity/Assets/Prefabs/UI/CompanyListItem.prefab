using System;
using System.Threading;
using System.Threading.Tasks;
using TycoonVerse.Domain.Companies;
using TycoonVerse.Infrastructure.Analytics;
using TycoonVerse.Unity.Common;
using TycoonVerse.Unity.Extensions;
using TycoonVerse.Unity.Localization;
using TycoonVerse.Unity.Presentation.ViewModels;
using UnityEngine;
using UnityEngine.EventSystems;
using UnityEngine.UI;

#nullable enable

namespace TycoonVerse.Unity.Presentation.UI
{
    /// <summary>
    /// Component that represents a single company entry in the “My Companies” scroll-list.
    /// It subscribes to its bound <see cref="CompanyViewModel"/> and updates
    /// all child widgets via lightweight data-binding.  Designed to be used with
    /// a <see cref="UnityEngine.UI.ContentSizeFitter"/> or CELL-size driven layout group.
    ///
    /// EXTRA:
    ///  • Handles throttled logo loading via <see cref="ICompanyLogoService"/>.
    ///  • Emits analytics events on user interaction.
    ///  • Implements <see cref="IPointerClickHandler"/> for list-selection semantics.
    /// </summary>
    [RequireComponent(typeof(Button))]
    public sealed class CompanyListItem : MonoBehaviour, IPointerClickHandler, IDisposable, IObserver<CompanySnapshot>
    {
        private static readonly Throttle _logoRequestThrottle = Throttle.PerFrame(2); // Limit async logo requests to 2 per frame.

        [Header("UI – References")]
        [SerializeField] private Image _logoImage = default!;
        [SerializeField] private Image _favoriteStar = default!;
        [SerializeField] private TMP_Text _companyName = default!;
        [SerializeField] private TMP_Text _industry = default!;
        [SerializeField] private TMP_Text _valuation = default!;
        [SerializeField] private Button _favoriteButton = default!;

        [Header("Visuals")]
        [SerializeField] private Sprite _placeholderLogo = default!;
        [SerializeField] private Sprite _emptyStarSprite = default!;
        [SerializeField] private Sprite _filledStarSprite = default!;

        private readonly SerialDisposable _vmSubscription = new(); // Ensures we never leak observers
        private readonly SerialDisposable _logoCts = new();        // Cancels any outstanding logo download when recycled

        private ICompanyLogoService? _logoService;
        private IAnalyticsService? _analytics;
        private CompanyViewModel? _viewModel;

        #region Unity Lifecycle --------------------------------------------------

        private void Awake()
        {
            _analytics    = ServiceLocator.Resolve<IAnalyticsService>();
            _logoService  = ServiceLocator.Resolve<ICompanyLogoService>();

            _favoriteButton.onClick.AddListener(OnFavoriteButtonClicked);
        }

        private void OnEnable()
        {
            // Defensive; in case prefab arrived enabled with a stale reference.
            UpdateUI(_viewModel?.Snapshot);
        }

        private void OnDisable()
        {
            // Cancel running async logo download when this element gets pooled.
            _logoCts.Dispose();
            _logoImage.sprite = _placeholderLogo;
        }

        void IPointerClickHandler.OnPointerClick(PointerEventData eventData)
        {
            if (_viewModel is null) return;

            AnalyticsClick();
            _viewModel.RaiseSelected(); // Propagate selection to mediator
        }

        public void Dispose()
        {
            _vmSubscription.Dispose();
            _logoCts.Dispose();
            _favoriteButton.onClick.RemoveListener(OnFavoriteButtonClicked);
        }

        #endregion ----------------------------------------------------------------

        #region Binding -----------------------------------------------------------

        /// <summary>
        /// Binds the item to a specific <see cref="CompanyViewModel"/>.
        /// Typically called from <see cref="CompanyListController"/> right after
        /// the item has been dequeued from an object pool.
        /// </summary>
        public void Bind(CompanyViewModel viewModel)
        {
            if (ReferenceEquals(_viewModel, viewModel)) return;

            // Dispose previous subscription
            _vmSubscription.Dispose();

            _viewModel = viewModel;
            _vmSubscription.Disposable = viewModel.Subscribe(this);

            UpdateUI(viewModel.Snapshot);

            // Kick-off logo download (if not already cached)
            _ = TryLoadLogoAsync(viewModel.Snapshot);
        }

        public void OnNext(CompanySnapshot value) => UpdateUI(value);
        public void OnError(Exception error)      => Debug.LogException(error);
        public void OnCompleted()                 { /* no-op */ }

        private void UpdateUI(CompanySnapshot? snapshot)
        {
            if (snapshot is null)
            {
                _companyName.text = string.Empty;
                _industry.text    = string.Empty;
                _valuation.text   = string.Empty;
                _favoriteStar.sprite = _emptyStarSprite;
                return;
            }

            _companyName.text = snapshot.DisplayName;
            _industry.text    = snapshot.IndustryKey.Localize(); // I18N support
            _valuation.text   = snapshot.Valuation.ToCurrency();

            _favoriteStar.sprite = snapshot.IsFavorite ? _filledStarSprite : _emptyStarSprite;
        }

        private async Task TryLoadLogoAsync(CompanySnapshot snapshot)
        {
            if (_logoService == null) return;
            if (snapshot.LogoTexture != null)
            {
                _logoImage.sprite = Sprite.Create(snapshot.LogoTexture,
                                                  new Rect(0, 0, snapshot.LogoTexture.width, snapshot.LogoTexture.height),
                                                  new Vector2(.5f, .5f));
                return;
            }

            // Throttle to avoid spamming network if list is scrolled quickly.
            await _logoRequestThrottle.WaitAsync();

            var cts = new CancellationTokenSource();
            _logoCts.Disposable = cts;

            try
            {
                var texture = await _logoService.FetchLogoAsync(snapshot.CompanyId, cts.Token);
                if (texture == null) return;

                snapshot.LogoTexture = texture; // Cache in memory for siblings.
                if (_viewModel?.Snapshot.CompanyId != snapshot.CompanyId) return; // View recycled, ignore.

                _logoImage.sprite = Sprite.Create(texture, new Rect(0, 0, texture.width, texture.height), new Vector2(.5f, .5f));
            }
            catch (OperationCanceledException) { /* intentionally canceled on recycle */ }
            catch (Exception ex)               { Debug.LogException(ex); }
        }

        #endregion ----------------------------------------------------------------

        #region Events ------------------------------------------------------------

        private void OnFavoriteButtonClicked()
        {
            if (_viewModel is null) return;

            _viewModel.ToggleFavorite();

            _analytics?.LogEvent(AnalyticsEventIds.ToggleFavoriteCompany, new()
            {
                ["companyId"]  = _viewModel.Snapshot.CompanyId.ToString(),
                ["isFavorite"] = _viewModel.Snapshot.IsFavorite
            });
        }

        private void AnalyticsClick()
        {
            if (_analytics == null || _viewModel == null) return;

            _analytics.LogEvent(AnalyticsEventIds.ClickCompanyListItem, new()
            {
                ["companyId"]   = _viewModel.Snapshot.CompanyId.ToString(),
                ["valuation"]   = _viewModel.Snapshot.Valuation,
                ["industryKey"] = _viewModel.Snapshot.IndustryKey
            });
        }

        #endregion ----------------------------------------------------------------
    }
}
