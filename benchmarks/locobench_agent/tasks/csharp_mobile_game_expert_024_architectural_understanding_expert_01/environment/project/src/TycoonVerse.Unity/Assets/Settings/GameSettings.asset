// ---------------------------------------------------------------------------------------------------------------------
// File:       Assets/Settings/GameSettings.asset (backed by this C# definition)
// Project:    TycoonVerse: Enterprise Empire Simulator
// Author:     TycoonVerse Engineering
// ---------------------------------------------------------------------------------------------------------------------
// Description:
//  A strongly-typed configuration container that is serialized as a *.asset file inside the Unity project.  The data
//  drives feature toggles (analytics, IAP, etc.), host selection, and platform capabilities (biometric auth, local
//  storage limits, …).  The asset is loaded at run-time through a singleton provider, guaranteeing that *one and only
//  one* instance is used application-wide.  When the file is missing (e.g., on a fresh checkout or a CI build) the
//  provider creates an in-memory instance with safe defaults so the app can still boot.
//
//  Architecture patterns demonstrated:
//      • Singleton (GameSettingsProvider)
//      • Factory (internal bootstrap & editor-time asset creation)
//      • Adapter (platform specific biometric/IAP back-ends referenced by string identifiers)
//
//  NOTE:  Because Unity serialises ScriptableObjects by value, this C# class *must* live next to (or above) the YAML
//  *.asset file.  Do NOT rename without migrating the existing asset.
// ---------------------------------------------------------------------------------------------------------------------

#nullable enable
using System;
using UnityEngine;

#if UNITY_EDITOR
using UnityEditor;
#endif

namespace TycoonVerse.Settings
{
    /// <summary>
    /// The environment the client is running against.  Controls API endpoints, telemetry sampling, etc.
    /// </summary>
    public enum EnvironmentTier
    {
        Production,
        Staging,
        Development,
    }

    /// <summary>
    /// Centralised game-wide configuration.  Serialized as an Asset so designers can tweak values without code changes.
    /// </summary>
    [CreateAssetMenu(
        fileName = "GameSettings",
        menuName = "TycoonVerse/Settings/Game Settings",
        order = 1)]
    public sealed class GameSettings : ScriptableObject
    {
        // ---------------------------------------------------------------------
        // Global toggles & meta
        // ---------------------------------------------------------------------

        [Header("Runtime")]
        [SerializeField] private EnvironmentTier _environment = EnvironmentTier.Production;
        [SerializeField] [Tooltip("Incremented whenever a breaking backend schema is deployed.")]
        private int _minimumSupportedApiVersion = 1;

        [Header("Features")]
        [SerializeField] private bool _enableAnalytics = true;
        [SerializeField] private bool _enableCrashReporting = true;
        [SerializeField] private bool _enableInAppPurchases = true;
        [SerializeField] private bool _enableBiometricAuth = true;
        [SerializeField] private bool _enableLocationServices = true;

        // ---------------------------------------------------------------------
        // Sub-systems
        // ---------------------------------------------------------------------

        [Header("Local Storage")]
        [SerializeField] [Tooltip("Maximum size (in MB) of the local SQLite DB before rotation.")]
        private int _maxLocalDbSizeMb = 250;

        [SerializeField] [Tooltip("Encrypt local saves with AES on device.")]
        private bool _encryptLocalStorage = true;

        [Header("In-App Purchases")]
        [SerializeField] private string _iapCatalogUrl = "https://cdn.tycoonverse.com/iap/catalog.json";
        [SerializeField] private string _iapSandboxCatalogUrl = "https://staging-cdn.tycoonverse.com/iap/catalog.json";
        [SerializeField] private string _iapStoreAdapter = "UnityIAP"; // could be "HuaweiIAP", etc.

        [Header("Analytics")]
        [Range(0f, 1f)]
        [SerializeField] [Tooltip("Sample rate for non-critical events. 1 = send all.")]
        private float _telemetrySampleRate = 1f;

        [Header("Biometric Auth")]
        [SerializeField] private string _iosBiometricProvider = "LocalAuth";     // Adapter keys
        [SerializeField] private string _androidBiometricProvider = "BiometricX";

        // ---------------------------------------------------------------------
        // Properties (read-only public access)
        // ---------------------------------------------------------------------

        public EnvironmentTier Environment => _environment;
        public int MinimumSupportedApiVersion => _minimumSupportedApiVersion;

        public bool EnableAnalytics => _enableAnalytics;
        public bool EnableCrashReporting => _enableCrashReporting;
        public bool EnableInAppPurchases => _enableInAppPurchases;
        public bool EnableBiometricAuth => _enableBiometricAuth;
        public bool EnableLocationServices => _enableLocationServices;

        public int MaxLocalDbSizeMb => _maxLocalDbSizeMb;
        public bool EncryptLocalStorage => _encryptLocalStorage;

        public string IapCatalogUrl =>
            _environment == EnvironmentTier.Production ? _iapCatalogUrl : _iapSandboxCatalogUrl;

        public string IapStoreAdapter => _iapStoreAdapter;
        public float TelemetrySampleRate => _telemetrySampleRate;

        public string GetBiometricProviderRuntimeKey()
        {
#if UNITY_IOS
            return _iosBiometricProvider;
#elif UNITY_ANDROID
            return _androidBiometricProvider;
#else
            return string.Empty;
#endif
        }

        // ---------------------------------------------------------------------
        // Validation & Debug helpers
        // ---------------------------------------------------------------------

#if UNITY_EDITOR
        private void OnValidate()
        {
            // Guard rails for unreasonable settings
            _maxLocalDbSizeMb = Mathf.Max(50, _maxLocalDbSizeMb);
            _telemetrySampleRate = Mathf.Clamp01(_telemetrySampleRate);

            if (!Application.isPlaying) return;
            Debug.Log("[GameSettings] Asset reloaded at runtime; live changes will take effect immediately.");
        }
#endif
    }

    // =============================================================================================================
    // Provider (Singleton)
    // =============================================================================================================
    /// <summary>
    /// Global accessor for <see cref="GameSettings"/> at runtime and in editor scripts.
    /// </summary>
    public sealed class GameSettingsProvider
    {
        private const string RESOURCE_LOAD_PATH = "Settings/GameSettings"; // Resources/Settings/GameSettings.asset

        private static readonly Lazy<GameSettingsProvider> _lazy =
            new Lazy<GameSettingsProvider>(LoadOrCreate);

        public static GameSettingsProvider Instance => _lazy.Value;

        public GameSettings Settings { get; }

        // Hidden ctor. Use Instance.
        private GameSettingsProvider(GameSettings settings) => Settings = settings;

        private static GameSettingsProvider LoadOrCreate()
        {
            // Attempt to load from Resources first
            var settings = Resources.Load<GameSettings>(RESOURCE_LOAD_PATH);

#if UNITY_EDITOR
            // If not found in Resources, try AssetDatabase lookup (Editor only)
            if (settings == null)
            {
                const string searchFilter = "t:GameSettings";
                var guids = AssetDatabase.FindAssets(searchFilter);
                if (guids.Length > 0)
                {
                    var path = AssetDatabase.GUIDToAssetPath(guids[0]);
                    settings = AssetDatabase.LoadAssetAtPath<GameSettings>(path);
                }
            }
#endif

            // As a last resort, create an in-memory instance with safe defaults
            if (settings == null)
            {
                settings = ScriptableObject.CreateInstance<GameSettings>();
#if UNITY_EDITOR
                Debug.LogWarning(
                    "[GameSettings] No GameSettings asset found in project. " +
                    "A temporary instance with defaults was generated. " +
                    "Create one via the Assets → Create → TycoonVerse → Settings menu.");
#else
                Debug.LogWarning("[GameSettings] Missing asset; using default settings.");
#endif
            }

            return new GameSettingsProvider(settings);
        }
    }

    // =============================================================================================================
    // Editor utilities
    // =============================================================================================================
#if UNITY_EDITOR
    /// <summary>
    /// Ensures the asset exists in the project hierarchy after code compilation.
    /// </summary>
    [InitializeOnLoad]
    internal static class GameSettingsBootstrap
    {
        private const string DEFAULT_ASSET_PATH = "Assets/Settings/GameSettings.asset";

        static GameSettingsBootstrap()
        {
            // Delay until editor is ready
            EditorApplication.delayCall += EnsureSettingsAssetExists;
        }

        private static void EnsureSettingsAssetExists()
        {
            // If the asset already exists, bail
            var existing = AssetDatabase.LoadAssetAtPath<GameSettings>(DEFAULT_ASSET_PATH);
            if (existing != null) return;

            // Create directory structure if missing
            var dir = System.IO.Path.GetDirectoryName(DEFAULT_ASSET_PATH);
            if (!System.IO.Directory.Exists(dir))
            {
                System.IO.Directory.CreateDirectory(dir!);
            }

            // Instantiate and save a new asset with production-level defaults
            var asset = ScriptableObject.CreateInstance<GameSettings>();
            AssetDatabase.CreateAsset(asset, DEFAULT_ASSET_PATH);
            AssetDatabase.SaveAssets();
            AssetDatabase.Refresh();

            Debug.Log("[GameSettings] Default GameSettings.asset generated at: " + DEFAULT_ASSET_PATH);
        }
    }
#endif
}
