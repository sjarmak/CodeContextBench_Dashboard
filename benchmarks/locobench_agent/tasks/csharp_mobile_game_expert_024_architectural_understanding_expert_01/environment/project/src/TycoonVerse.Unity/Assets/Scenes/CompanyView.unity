    /// <summary>
    /// Lightweight in-memory pub/sub.  In a larger codebase consider a full
    /// event aggregator (e.g., UniRx, MediatR) or message bus.
    /// </summary>
    internal sealed class DomainEventBus
    {
        private static readonly Lazy<DomainEventBus> _lazy =
            new(() => new DomainEventBus());

        public static DomainEventBus Instance => _lazy.Value;

        private DomainEventBus() { }

        public event EventHandler<CompanySnapshot> CompanyFinancialsUpdated;

        public void RaiseCompanyFinancialsUpdated(CompanySnapshot snapshot)
        {
            CompanyFinancialsUpdated?.Invoke(this, snapshot);
        }
    }

