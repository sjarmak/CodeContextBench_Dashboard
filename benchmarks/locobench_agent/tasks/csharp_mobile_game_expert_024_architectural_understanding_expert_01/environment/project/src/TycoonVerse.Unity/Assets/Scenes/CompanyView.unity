namespace TycoonVerse.Unity.Scenes
{
    /// <summary>
    /// Represents the presentation layer for the Company View scene.
    /// Leverages MVVM: CompanyView (View), CompanyViewModel (View-Model),
    /// and Company (Domain Model).  Communication follows the Observer pattern.
    /// </summary>
    [DisallowMultipleComponent]
    public sealed class CompanyView : MonoBehaviour
    {
        #region Inspector

        [Header("UI – Primary Metrics")]
        [SerializeField] private TMP_Text _companyName;
        [SerializeField] private TMP_Text _cashLabel;
        [SerializeField] private TMP_Text _revenueLabel;
        [SerializeField] private TMP_Text _ebitdaLabel;

        [Header("UI – Buttons")]
        [SerializeField] private Button _btnGoToMarket;
        [SerializeField] private Button _btnSyncNow;
        [SerializeField] private Button _btnExit;

        [Header("UI – Loaders")]
        [SerializeField] private GameObject _loadingOverlay;

        #endregion

        private readonly CompanyViewModel _viewModel = new();
        private readonly CancellationTokenSource _cts = new();

        #region Unity Lifecycle

        private void Awake()
        {
            EnsureRequiredRefs();
            BindViewModel();
            RegisterButtonHandlers();
        }

        private async void OnEnable()
        {
            await _viewModel.RefreshAsync(_cts.Token);
        }

        private void OnDisable()
        {
            _viewModel.PropertyChanged -= OnViewModelPropertyChanged;
            _viewModel.Dispose();
        }

        private void OnDestroy()
        {
            _cts.Cancel();
            _cts.Dispose();
        }

        #endregion

        #region Binding / Event Handlers

        private void EnsureRequiredRefs()
        {
            if (_companyName == null || _cashLabel == null || _revenueLabel == null ||
                _ebitdaLabel == null || _btnGoToMarket == null || _btnSyncNow == null ||
                _btnExit == null || _loadingOverlay == null)
            {
                Debug.LogError($"{nameof(CompanyView)} – Missing references in the inspector.", this);
                enabled = false;
            }
        }

        private void BindViewModel()
        {
            _viewModel.PropertyChanged += OnViewModelPropertyChanged;
        }

        private void RegisterButtonHandlers()
        {
            _btnGoToMarket.onClick.AddListener(OnGoToMarketClicked);
            _btnSyncNow.onClick.AddListener(OnSyncNowClicked);
            _btnExit.onClick.AddListener(OnExitClicked);
        }

        private void OnViewModelPropertyChanged(object sender, PropertyChangedEventArgs e)
        {
            switch (e.PropertyName)
            {
                case nameof(CompanyViewModel.CompanyName):
                    _companyName.text = _viewModel.CompanyName;
                    break;

                case nameof(CompanyViewModel.Cash):
                    _cashLabel.text = _viewModel.Cash.ToString("C");
                    break;

                case nameof(CompanyViewModel.Revenue):
                    _revenueLabel.text = _viewModel.Revenue.ToString("C");
                    break;

                case nameof(CompanyViewModel.EBITDA):
                    _ebitdaLabel.text = _viewModel.EBITDA.ToString("C");
                    break;

                case nameof(CompanyViewModel.IsSyncing):
                    _loadingOverlay.SetActive(_viewModel.IsSyncing);
                    break;
            }
        }

        private async void OnGoToMarketClicked() =>
            await SceneManager.LoadSceneAsync("Marketplace", LoadSceneMode.Single);

        private async void OnSyncNowClicked()
        {
            try
            {
                await _viewModel.SyncNowAsync(_cts.Token);
            }
            catch (OperationCanceledException)
            {
                // Ignore – user navigated away before the sync finished.
            }
        }

        private void OnExitClicked()
        {
            // Graceful shutdown: flush analytics before quitting.
            AnalyticsService.Instance.Flush();
#if UNITY_EDITOR
            UnityEditor.EditorApplication.isPlaying = false;
#else
            Application.Quit();
#endif
        }

        #endregion
    }

