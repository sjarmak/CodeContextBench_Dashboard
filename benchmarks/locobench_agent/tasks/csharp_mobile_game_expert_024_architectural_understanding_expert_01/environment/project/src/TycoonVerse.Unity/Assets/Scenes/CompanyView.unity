    internal interface ICompanyRepository
    {
        Task<CompanySnapshot> GetAsync(CancellationToken token);
        Task UpsertAsync(CompanySnapshot snapshot, CancellationToken token);
    }

    /// <summary>
    /// Stores and retrieves Company data from the local SQLite DB.
    /// Implements basic retry logic to protect against locked DB handles on mobile.
    /// </summary>
    internal sealed class LocalCompanyRepository : ICompanyRepository
    {
        private const int MaxRetries = 3;
        private readonly TimeSpan _retryDelay = TimeSpan.FromMilliseconds(150);

        public async Task<CompanySnapshot> GetAsync(CancellationToken token)
        {
            int attempt = 0;

            while (true)
            {
                try
                {
                    await Task.Yield(); // Simulate async IO.
                    token.ThrowIfCancellationRequested();

                    return LoadSnapshotFromDb();
                }
                catch (Exception) when (attempt++ < MaxRetries)
                {
                    await Task.Delay(_retryDelay, token);
                }
            }
        }

        public async Task UpsertAsync(CompanySnapshot snapshot, CancellationToken token)
        {
            int attempt = 0;

            while (true)
            {
                try
                {
                    await Task.Yield(); // Simulate async IO.
                    token.ThrowIfCancellationRequested();

                    SaveSnapshotToDb(snapshot);
                    return;
                }
                catch (Exception) when (attempt++ < MaxRetries)
                {
                    await Task.Delay(_retryDelay, token);
                }
            }
        }

        #region Private DB Helpers (Stub)

        private CompanySnapshot LoadSnapshotFromDb()
        {
            // TODO: Replace with real SQLite queries via Dapper.
            return new CompanySnapshot(
                id: Guid.NewGuid(),
                name:    "Tycoon Corp.",
                cash:    1_250_000m,
                revenue: 7_000_000m,
                ebitda:  1_850_000m);
        }

        private void SaveSnapshotToDb(CompanySnapshot snapshot)
        {
