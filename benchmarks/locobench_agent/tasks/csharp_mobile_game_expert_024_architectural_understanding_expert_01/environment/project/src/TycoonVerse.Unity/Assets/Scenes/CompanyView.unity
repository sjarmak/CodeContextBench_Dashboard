    internal interface ICloudSyncService
    {
        Task PushLocalChangesAsync(CancellationToken token);
    }

    internal sealed class CloudSyncService : ICloudSyncService
    {
        public async Task PushLocalChangesAsync(CancellationToken token)
        {
            // Simulated deterministic sync logic for offline-first architecture.
            await Task.Delay(TimeSpan.FromSeconds(1.2f), token);

            // On success, raise domain event so UI can refresh.
            var updatedSnapshot = new CompanySnapshot(
                id: Guid.NewGuid(),
                name:    "Tycoon Corp.",
                cash:    1_500_000m,
                revenue: 8_200_000m,
                ebitda:  2_050_000m);

            DomainEventBus.Instance.RaiseCompanyFinancialsUpdated(updatedSnapshot);
        }
    }

