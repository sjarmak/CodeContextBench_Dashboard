    /// <summary>
    /// CompanyViewModel implements all business logic required by the view.
    /// It subscribes to domain events and persists changes via repositories.
    /// </summary>
    internal sealed class CompanyViewModel : INotifyPropertyChanged, IDisposable
    {
        private readonly ICompanyRepository _repository;
        private readonly ICloudSyncService _syncService;
        private readonly CancellationTokenSource _internalCts = new();

        private string _companyName = "-";
        private decimal _cash;
        private decimal _revenue;
        private decimal _ebitda;
        private bool _isSyncing;

        public CompanyViewModel()
        {
            // In production the instance would be injected via an IoC container.
            _repository   = new LocalCompanyRepository();
            _syncService  = new CloudSyncService();

            // Subscribe to domain updates (Observer Pattern).
            DomainEventBus.Instance.CompanyFinancialsUpdated += OnCompanyFinancialsUpdated;
        }

        #region Public Properties (Bindable)

        public string CompanyName
        {
            get => _companyName;
            private set => SetField(ref _companyName, value);
        }

        public decimal Cash
        {
            get => _cash;
            private set => SetField(ref _cash, value);
        }

        public decimal Revenue
        {
            get => _revenue;
            private set => SetField(ref _revenue, value);
        }

        public decimal EBITDA
        {
            get => _ebitda;
            private set => SetField(ref _ebitda, value);
        }

        public bool IsSyncing
        {
            get => _isSyncing;
            private set => SetField(ref _isSyncing, value);
        }

        #endregion

        #region Public Methods

        public async Task RefreshAsync(CancellationToken externalToken)
        {
            using var linked = CancellationTokenSource.CreateLinkedTokenSource(
                externalToken, _internalCts.Token);

            var snapshot = await _repository.GetAsync(linked.Token);

            CompanyName = snapshot.Name;
            Cash        = snapshot.Cash;
            Revenue     = snapshot.Revenue;
            EBITDA      = snapshot.EBITDA;
        }

        public async Task SyncNowAsync(CancellationToken externalToken)
        {
            using var linked = CancellationTokenSource.CreateLinkedTokenSource(
                externalToken, _internalCts.Token);

            try
            {
                IsSyncing = true;
                await _syncService.PushLocalChangesAsync(linked.Token);
                await RefreshAsync(linked.Token);

                AnalyticsService.Instance.TrackEvent("company_manual_sync_success");
            }
            catch (Exception ex)
            {
                AnalyticsService.Instance.TrackEvent("company_manual_sync_failure",
                    ("errorType", ex.GetType().Name),
                    ("message",    ex.Message));

                Debug.LogError($"[CompanyViewModel] Sync failed: {ex.Message}");
                throw;
            }
            finally
            {
                IsSyncing = false;
            }
        }

        #endregion

        #region Domain Event Handlers

        private async void OnCompanyFinancialsUpdated(object sender, CompanySnapshot snapshot)
        {
            // Persist the latest state locally and update UI.
            try
            {
                await _repository.UpsertAsync(snapshot, _internalCts.Token);

                CompanyName = snapshot.Name;
                Cash        = snapshot.Cash;
                Revenue     = snapshot.Revenue;
                EBITDA      = snapshot.EBITDA;
            }
            catch (Exception ex)
            {
                Debug.LogWarning($"Failed to process financial update: {ex.Message}");
            }
        }

        #endregion

        #region INotifyPropertyChanged

        public event PropertyChangedEventHandler PropertyChanged;

        private void SetField<T>(ref T field, T value, [CallerMemberName] string member = "")
        {
            if (Equals(field, value)) return;
            field = value;
            PropertyChanged?.Invoke(this, new PropertyChangedEventArgs(member));
        }

        #endregion

        public void Dispose()
        {
            _internalCts.Cancel();
            _internalCts.Dispose();
            DomainEventBus.Instance.CompanyFinancialsUpdated -= OnCompanyFinancialsUpdated;
        }
    }

