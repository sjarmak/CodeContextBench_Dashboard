{
  "name": "@agorapulse/ml-nlp",
  "version": "2.3.0",
  "description": "AgoraPulse: Real-Time Social Signal Intelligence â€“ event-driven ML/NLP platform for instantaneous community insights.",
  "license": "Apache-2.0",
  "author": "AgoraPulse Engineering <engineering@agorapulse.io>",
  "homepage": "https://github.com/agorapulse/ml-nlp#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agorapulse/ml-nlp.git"
  },
  "bugs": {
    "url": "https://github.com/agorapulse/ml-nlp/issues"
  },
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "engines": {
    "node": ">=18.16.0",
    "npm": ">=9.6.0"
  },
  "packageManager": "npm@9.6.2",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist coverage .turbo",
    "dev": "NODE_ENV=development ts-node-dev --project tsconfig.json --respawn --transpile-only --exit-child src/index.ts",
    "build": "npm run clean && tsc -p tsconfig.build.json && rollup -c",
    "start": "node --env-file .env dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"{src,test,tools}/**/*.{ts,tsx}\" --max-warnings 0",
    "format": "prettier \"**/*.{ts,tsx,js,json,md,yml}\" --write",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --coverage",
    "test:watch": "npm run test -- --watchAll",
    "docker:build": "docker compose -f docker/docker-compose.yml build",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f --tail=200",
    "release": "semantic-release",
    "prepare": "husky install",
    "prepublishOnly": "npm run test && npm run build"
  },
  "dependencies": {
    "@kafkajs/confluent-schema-registry": "^3.0.0",
    "@opentelemetry/api": "^1.5.0",
    "@opentelemetry/auto-instrumentations-node": "^0.37.0",
    "@opentelemetry/sdk-node": "^0.37.0",
    "@tensorflow/tfjs-node": "^4.7.0",
    "axios": "^1.5.0",
    "camelcase-keys": "^8.0.2",
    "dotenv": "^16.3.1",
    "eventemitter3": "^5.0.0",
    "fast-json-stable-stringify": "^3.0.2",
    "kafkajs": "^2.5.0",
    "pino": "^8.16.0",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^18.4.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/eventemitter3": "^5.0.2",
    "@types/jest": "^29.5.5",
    "@types/kafkajs": "^1.16.4",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-jsdoc": "^46.3.6",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "rollup": "^3.26.3",
    "semantic-release": "^22.0.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "semanticRelease": {
    "branch": "main",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ]
        }
      ]
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}