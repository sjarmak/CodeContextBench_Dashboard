{
  "//": "EduPulse Live – Event-Driven Social Learning Hub (web_social)\n  Front-end + Rust/WASM package manifest.\n  This file orchestrates JavaScript tooling, the Rust → WebAssembly pipeline,\n  rigorous CI hooks, and conventional commits.",
  "name": "@edupulse/web_social",
  "version": "0.7.0",
  "private": true,
  "license": "MIT",
  "description": "Responsive React + WASM front-end for EduPulse Live; integrates real-time collaboration widgets, OAuth login, and adaptive learning pulse components.",
  "author": {
    "name": "EduPulse OSS Team",
    "email": "oss@edupulse.live",
    "url": "https://edupulse.live"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/edupulse/edupulse-live.git",
    "directory": "web_social"
  },
  "homepage": "https://edupulse.live",
  "engines": {
    "node": ">=18.12.0",
    "npm": ">=9.4.0"
  },
  "_comment_build_targets": "We target modern evergreen browsers plus the last two ESR versions of Firefox.",
  "browserslist": {
    "production": [
      "chrome >= 107",
      "edge >= 107",
      "firefox >= 102",
      "safari >= 16",
      "ios_saf >= 15"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 5173",
    "build": "vite build && npm run build:wasm",
    "build:wasm": "wasm-pack build ./crates/edupulse_core --target web --out-dir ./src/wasm --release",
    "preview": "vite preview --port 8080",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --max-warnings=0 \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "jest --coverage",
    "ci": "npm run lint && npm run typecheck && npm run test",
    "prepare": "husky install",
    "commit": "cz",
    "clean": "rimraf dist && rimraf src/wasm",
    "doc": "typedoc --entryPoints src --out docs"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@reduxjs/toolkit": "^1.9.5",
    "axios": "^1.6.2",
    "date-fns": "^3.2.1",
    "jwt-decode": "^3.1.2",
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.46.1",
    "react-icons": "^4.10.1",
    "react-redux": "^8.1.2",
    "react-router-dom": "^6.18.0",
    "socket.io-client": "^4.7.4",
    "tailwindcss": "^3.3.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.5",
    "@types/lodash-es": "^4.17.9",
    "@types/node": "^20.10.3",
    "@types/react": "^18.2.26",
    "@types/react-dom": "^18.2.10",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.31",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vite-plugin-wasm-pack": "^2.0.1",
    "wasm-pack": "^0.12.1"
  },
  "resolutions": {
    "ansi-regex": "^5.0.1"
  },
  "_comment_git_hooks": "Git hooks powered by Husky for consistent formatting, linting, and commit message validation.",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  },
  "cz": {
    "path": "cz-conventional-changelog"
  },
  "publishConfig": {
    "access": "public"
  },
  "_comment_ide_helper": "VSCode users: recommended extensions—dbaeumer.vscode-eslint, esbenp.prettier-vscode, rust-lang.rust-analyzer."
}