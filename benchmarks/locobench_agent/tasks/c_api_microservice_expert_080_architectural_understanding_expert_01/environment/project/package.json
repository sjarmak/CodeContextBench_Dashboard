{
  "name": "@mercury/monolith",
  "version": "1.4.2",
  "description": "Tooling workspace for MercuryMonolith Commerce Hub â€“ documentation, schema generation, CI helpers, and development utilities.",
  "private": true,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mercury/monolith"
  },
  "engines": {
    "node": ">=16.14",
    "pnpm": ">=8.6"
  },
  "volta": {
    "node": "18.18.0",
    "pnpm": "8.10.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "husky install",
    "clean": "rm -rf build coverage .openapi .graphql",
    "lint": "eslint \"{scripts,tools}/**/*.ts\" --max-warnings 0",
    "format": "prettier --write \"**/*.{json,md,yaml,yml}\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "generate:openapi": "node tools/generate-openapi.js",
    "generate:graphql": "node tools/generate-graphql.js",
    "prepare:schemas": "npm run generate:openapi && npm run generate:graphql",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "docker:builder": "docker build -f ./docker/Dockerfile.builder -t mercury/monolith-builder:latest .",
    "docker:runtime": "docker build -f ./docker/Dockerfile.runtime -t mercury/monolith:latest .",
    "release": "semantic-release",
    "security:audit": "npm audit --production",
    "security:fix": "npm audit fix --force"
  },
  "dependencies": {
    "@openapitools/openapi-generator-cli": "^2.8.12",
    "chalk": "^5.3.0",
    "graphql": "^16.8.1",
    "yaml": "^2.3.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^18.18.3",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "only-allow": "^1.2.1",
    "prettier": "^3.0.3",
    "semantic-release": "^22.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.json": [
      "prettier --write"
    ],
    "{scripts,tools}/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "@types/node": "^18.18.3"
    }
  }
}