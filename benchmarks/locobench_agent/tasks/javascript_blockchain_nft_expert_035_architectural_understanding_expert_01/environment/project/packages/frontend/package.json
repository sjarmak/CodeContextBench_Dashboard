{
  "name": "@stellarscene/carnival-frontend",
  "version": "1.0.0",
  "description": "StellarStage Carnival – Interactive NFT Showrunner · React-Three front-end",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.16.0",
    "npm": ">=9.6.0"
  },
  "author": "StellarStage Labs",
  "license": "Apache-2.0",
  "homepage": "https://github.com/StellarStage/carnival/tree/main/packages/frontend#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StellarStage/carnival.git",
    "directory": "packages/frontend"
  },
  "keywords": [
    "nft",
    "blockchain",
    "react",
    "vite",
    "three.js",
    "defi",
    "web3",
    "graphQL",
    "clean-architecture",
    "state-machine",
    "event-driven"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
    "format": "prettier --write .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@apollo/client": "^3.8.7",
    "@chakra-ui/react": "^2.7.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@react-three/drei": "^9.79.4",
    "@react-three/fiber": "^8.13.7",
    "ethers": "^6.7.0",
    "framer-motion": "^10.16.1",
    "graphql": "^16.8.1",
    "graphql-ws": "^5.14.2",
    "hls.js": "^1.5.6",
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0",
    "zustand": "^4.4.2",
    "wagmi": "^1.4.9",
    "viem": "^1.11.3",
    "web3modal": "^3.0.2"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.6.10",
    "@storybook/addon-interactions": "^7.6.10",
    "@storybook/addon-links": "^7.6.10",
    "@storybook/addon-mdx-gfm": "^7.6.10",
    "@storybook/blocks": "^7.6.10",
    "@storybook/react-vite": "^7.6.10",
    "@testing-library/jest-dom": "^6.4.1",
    "@testing-library/react": "^14.0.0",
    "@types/lodash-es": "^4.17.8",
    "@types/react": "^18.2.24",
    "@types/react-dom": "^18.2.8",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vitejs/plugin-react": "^4.1.2",
    "c8": "^8.0.1",
    "commitlint": "^17.7.2",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^0.34.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "browserslist": [
    "chrome >= 95",
    "edge >= 95",
    "firefox >= 102",
    "safari >= 15",
    "ios_saf >= 15"
  ],
  "jest": {
    "preset": "vite-jest",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "coverageProvider": "v8",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}