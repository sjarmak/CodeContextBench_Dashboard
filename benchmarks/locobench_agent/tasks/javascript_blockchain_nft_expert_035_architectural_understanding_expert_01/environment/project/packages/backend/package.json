{
  "name": "@stellarstage/backend",
  "version": "0.1.0",
  "description": "Backend services for StellarStage Carnival: Interactive NFT Showrunner.",
  "private": true,
  "license": "MIT",
  "author": "StellarStage Labs",
  "engines": {
    "node": ">=18.16",
    "npm": ">=9"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "cross-env NODE_ENV=development nodemon --config nodemon.json",
    "build": "npm-run-all lint typecheck transpile",
    "transpile": "tsc -p tsconfig.build.json",
    "start": "cross-env NODE_ENV=production node --enable-source-maps ./dist/index.js",
    "lint": "eslint \"src/**/*.{ts,tsx,js,cjs,mjs}\"",
    "lint:fix": "npm run lint -- --fix",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "npm run test -- --watch",
    "coverage": "npm run test -- --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist coverage .turbo",
    "prepublishOnly": "npm run build"
  },
  "workspaces": {
    "nohoist": [
      "**/react",
      "**/react/**"
    ]
  },
  "dependencies": {
    "@apollo/server": "^4.7.4",
    "@eventemitter3/strict": "^1.0.1",
    "@ethersproject/abi": "^5.7.2",
    "@ethersproject/contracts": "^5.7.2",
    "@ethersproject/providers": "^5.7.2",
    "async-mutex": "^0.5.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-subscriptions": "^3.0.0",
    "graphql-ws": "^5.11.5",
    "ioredis": "^5.3.2",
    "ipfs-http-client": "^64.0.0",
    "luxon": "^3.4.0",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.0",
    "@commitlint/config-conventional": "^17.7.0",
    "@graphql-codegen/cli": "^3.1.0",
    "@graphql-codegen/typescript": "^3.1.0",
    "@graphql-codegen/typescript-operations": "^3.1.0",
    "@graphql-codegen/typescript-resolvers": "^3.1.0",
    "@jest/types": "^29.6.3",
    "@swc/core": "^1.3.70",
    "@swc/jest": "^0.2.30",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/luxon": "^3.2.1",
    "@types/node": "^20.5.1",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.3",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**"
    ],
    "coverageDirectory": "coverage"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md,yaml,yml}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx,js}": [
      "eslint --fix"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "exec": "node --loader ts-node/esm src/index.ts"
  }
}