{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "StellarStage Carnival â€“ Backend",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node16",
    "lib": ["ES2021", "DOM"],
    "types": ["node", "jest"],
    "allowSyntheticDefaultImports": true,

    /* Output */
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Project Build */
    "composite": true,
    "incremental": true,

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Decorators / Metadata (for dependency injection, ORMs, etc.) */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Interop & Utilities */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["../domain/src/*"],
      "@usecases/*": ["../application/src/usecases/*"],
      "@entities/*": ["../domain/src/entities/*"],
      "@adapters/*": ["../infrastructure/src/adapters/*"],
      "@config/*": ["./src/config/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"],
      "@contracts/*": ["./src/contracts/*"]
    },

    /* Language Service Plugins */
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "alwaysShowRuleFailuresAsWarnings": false,
        "ignoreDefinitionFiles": true,
        "suppressWhileTypeErrorsPresent": false
      },
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },

  /* Referenced Projects (Clean Architecture layers) */
  "references": [
    { "path": "../domain" },
    { "path": "../application" },
    { "path": "../infrastructure" }
  ],

  /* File Globs */
  "include": ["src/**/*", "typings/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "build", "**/*.spec.ts", "**/*.test.ts"],

  /* ts-node Runtime Options */
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}