{
  "name": "@stellastage/carnival",
  "version": "1.0.0",
  "private": true,
  "description": "StellarStage Carnival â€“ Interactive NFT Showrunner that transforms live shows into immersive, blockchain-backed game worlds.",
  "keywords": [
    "blockchain",
    "nft",
    "ethereum",
    "defi",
    "clean-architecture",
    "event-driven",
    "react",
    "threejs",
    "typescript"
  ],
  "license": "MIT",
  "author": "StellarStage Labs <dev@stellastage.io>",
  "homepage": "https://github.com/stellastage/carnival#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stellastage/carnival.git"
  },
  "engines": {
    "node": ">=18.16",
    "npm": ">=9.5"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf dist coverage",
    "build": "npm run clean && tsc -p tsconfig.build.json && vite build",
    "dev": "cross-env NODE_ENV=development vite",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"{src,test}/**/*.{ts,tsx,js,jsx}\" --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml}\"",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:watch": "npm run test -- --watch",
    "coverage": "npm run test -- --coverage",
    "contracts:compile": "hardhat compile",
    "contracts:test": "hardhat test",
    "contracts:deploy": "hardhat run scripts/deploy.ts --network",
    "graph:codegen": "graph codegen",
    "graph:create-local": "graph create stellastage/carnival --product hosted-service",
    "graph:deploy": "graph deploy --product hosted-service stellastage/carnival subgraph.yaml",
    "prepare": "husky install"
  },
  "dependencies": {
    "@apollo/client": "^3.9.3",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@ethersproject/abi": "^5.8.0",
    "@ethersproject/providers": "^5.8.0",
    "@react-three/drei": "^10.3.1",
    "@react-three/fiber": "^8.13.3",
    "@reduxjs/toolkit": "^1.9.5",
    "@walletconnect/web3-provider": "^1.8.0",
    "clsx": "^1.2.1",
    "eventemitter3": "^5.0.1",
    "ethers": "^6.7.0",
    "graphql": "^16.7.1",
    "ipfs-http-client": "^62.0.3",
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.2",
    "react-use": "^17.4.0",
    "three": "^0.155.0",
    "uuid": "^9.0.0",
    "wagmi": "^1.5.7",
    "web3modal": "^2.7.3",
    "xstate": "^5.12.3",
    "zustand": "^4.3.9"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.0.1",
    "@graphql-codegen/typescript": "^3.2.1",
    "@graphql-codegen/typescript-operations": "^3.2.1",
    "@graphql-codegen/typescript-react-apollo": "^3.2.1",
    "@openzeppelin/contracts": "^5.0.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.3",
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^20.4.2",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "hardhat": "^2.19.1",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "lint-staged": "^13.3.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.0",
    "vite": "^4.4.9"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/test"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "moduleNameMapper": {
      "^@src/(.*)$": "<rootDir>/src/$1",
      "^@domain/(.*)$": "<rootDir>/src/domain/$1",
      "^@usecases/(.*)$": "<rootDir>/src/usecases/$1",
      "^@infrastructure/(.*)$": "<rootDir>/src/infrastructure/$1",
      "^@presentation/(.*)$": "<rootDir>/src/presentation/$1"
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true,
      "es2023": true,
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ],
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-hooks",
      "unused-imports"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "unused-imports/no-unused-imports": "error",
      "react/react-in-jsx-scope": "off",
      "@typescript-eslint/explicit-function-return-type": [
        "warn",
        {
          "allowExpressions": true,
          "allowTypedFunctionExpressions": true
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "es5",
    "arrowParens": "always"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  }
}