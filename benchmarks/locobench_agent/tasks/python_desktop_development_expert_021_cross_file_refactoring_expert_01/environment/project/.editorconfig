# EditorConfig is awesome: https://EditorConfig.org

# Top-level configuration for the FlockDesk code-base
# ----------------------------------------------------------------------
root = true


###############################################################################
# Global defaults
###############################################################################
[*]
charset                 = utf-8
end_of_line             = lf
insert_final_newline    = true
trim_trailing_whitespace= true
indent_style            = space
indent_size             = 4


###############################################################################
# Python source files
###############################################################################
[*.{py,pyw}]
indent_size             = 4
max_line_length         = 88        # Mirrors Black & Flake8 default
# Custom pseudo-properties that some IDEs (e.g. PyCharm) understand
ij_python_formatter     = black     # JetBrains-specific hint


# Test-suite: allow slightly longer lines for parametrised test names
[tests/**.py]
max_line_length         = 120


###############################################################################
# Qt Designer UI files
###############################################################################
[*.ui]
indent_size             = 4


###############################################################################
# JSON / YAML — 2-space indentation keeps payloads compact
###############################################################################
[*.{json,yml,yaml}]
indent_size             = 2
trim_trailing_whitespace= true
quote_type              = double


###############################################################################
# Shell scripts
###############################################################################
[*.{sh,bash,zsh}]
indent_size             = 2
trim_trailing_whitespace= true
insert_final_newline    = true


###############################################################################
# Markdown & reStructuredText — keep trailing whitespace for intentional line-breaks
###############################################################################
[*.{md,rst}]
trim_trailing_whitespace= false


###############################################################################
# Makefiles — tabs are required
###############################################################################
[Makefile]
indent_style            = tab