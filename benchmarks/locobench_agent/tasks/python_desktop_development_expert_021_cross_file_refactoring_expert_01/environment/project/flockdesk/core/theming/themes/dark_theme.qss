/*
    FlockDesk – Dark Theme Style Sheet
    ----------------------------------
    This file contains the default “Dark” look-and-feel that ships with
    FlockDesk.  While the style sheet is static at runtime, placeholders in the
    form of ${TOKEN_NAME} are replaced by the theming engine when the theme is
    loaded, allowing end-users (or plugins) to override specific palette
    entries without having to duplicate the entire file.
    
    Tokens:
        ${ACCENT}          – Primary accent color
        ${ACCENT_LIGHT}    – Accent color (lighter)
        ${ACCENT_DARK}     – Accent color (darker)
        ${BASE}            – Base window background
        ${ELEVATED}        – Elevated widget background
        ${TEXT_PRIMARY}    – Primary text color
        ${TEXT_SECONDARY}  – Secondary/disabled text color
        ${DIVIDER}         – Light border/divider color
*/

* {
    font-family: "Inter", "Segoe UI", "Helvetica Neue", Arial, sans-serif;
    font-size: 11pt;
    color: ${TEXT_PRIMARY};
    background: ${BASE};
}

/* ————————————————————————————————————————
   Windows & Panels
   ———————————————————————————————————————— */

QMainWindow, QWidget#centralWidget {
    background: ${BASE};
}

QDockWidget {
    background: ${ELEVATED};
    border: 1px solid ${DIVIDER};
    titlebar-close-icon: url(":/icons/close.svg");
    titlebar-normal-icon: url(":/icons/undock.svg");
}

QDockWidget::title {
    padding: 4px 6px;
    background: rgba(255, 255, 255, 0.02);
    font-weight: 500;
}

QDockWidget::separator {
    height: 1px;
    background: ${DIVIDER};
}

/* ————————————————————————————————————————
   Buttons
   ———————————————————————————————————————— */

QPushButton {
    background-color: ${ELEVATED};
    border: 1px solid ${DIVIDER};
    border-radius: 4px;
    padding: 6px 12px;
}

QPushButton:hover {
    border-color: ${ACCENT_LIGHT};
}

QPushButton:pressed {
    background-color: ${ACCENT_DARK};
}

QPushButton:disabled {
    color: ${TEXT_SECONDARY};
    background: ${ELEVATED};
    border-color: ${DIVIDER};
}

/* Primary/Accent Buttons (add “primary” property via Qt Designer) */
QPushButton[primary="true"] {
    background: ${ACCENT};
    border-color: ${ACCENT};
    color: #ffffff;
}

QPushButton[primary="true"]:hover {
    background: ${ACCENT_LIGHT};
}

QPushButton[primary="true"]:pressed {
    background: ${ACCENT_DARK};
}

/* ————————————————————————————————————————
   Line Edit & Text Controls
   ———————————————————————————————————————— */

QLineEdit, QTextEdit, QPlainTextEdit, QSpinBox,
QComboBox, QDateEdit, QTimeEdit, QDateTimeEdit {
    background: ${ELEVATED};
    border: 1px solid ${DIVIDER};
    border-radius: 4px;
    padding: 4px 6px;
    selection-background-color: ${ACCENT_DARK};
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus,
QSpinBox:focus, QComboBox:focus {
    border-color: ${ACCENT};
}

/* Placeholder text */
QLineEdit[echoMode="0"]::placeholder,
QTextEdit::placeholder {
    color: ${TEXT_SECONDARY};
}

/* Combo Box */
QComboBox::down-arrow {
    image: url(":/icons/chevron-down.svg");
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    border-left: 1px solid ${DIVIDER};
    width: 24px;
}

/* ————————————————————————————————————————
   Tabs
   ———————————————————————————————————————— */

QTabBar::tab {
    background: ${ELEVATED};
    border: 1px solid ${DIVIDER};
    border-bottom: none;
    padding: 6px 12px;
    margin-right: -1px; /* overlap borders */
}

QTabBar::tab:selected {
    background: ${BASE};
    border-color: ${ACCENT};
    border-bottom: 2px solid ${ACCENT};
    font-weight: 500;
}

QTabBar::tab:hover {
    background: rgba(255, 255, 255, 0.04);
}

/* ————————————————————————————————————————
   Scroll Bars
   ———————————————————————————————————————— */

QScrollBar:vertical, QScrollBar:horizontal {
    background: transparent;
    margin: 0px;
}

QScrollBar::handle {
    background: ${ACCENT_DARK};
    border-radius: 4px;
    min-height: 24px;
    min-width: 24px;
}

QScrollBar::handle:hover {
    background: ${ACCENT};
}

QScrollBar::add-line, QScrollBar::sub-line,
QScrollBar::add-page, QScrollBar::sub-page {
    background: none;
    border: none;
}

/* ————————————————————————————————————————
   Check Boxes & Radio Buttons
   ———————————————————————————————————————— */

QCheckBox::indicator, QRadioButton::indicator {
    width: 16px;
    height: 16px;
}

QCheckBox::indicator:unchecked,
QRadioButton::indicator:unchecked {
    image: url(":/icons/check-unchecked.svg");
}

QCheckBox::indicator:checked,
QRadioButton::indicator:checked {
    image: url(":/icons/check-checked.svg");
}

QCheckBox::indicator:indeterminate {
    image: url(":/icons/check-partial.svg");
}

/* ————————————————————————————————————————
   Lists & Trees
   ———————————————————————————————————————— */

QListView, QTreeView, QTableView {
    background: ${ELEVATED};
    alternate-background-color: rgba(255, 255, 255, 0.03);
    gridline-color: ${DIVIDER};
    selection-background-color: ${ACCENT_DARK};
    selection-color: #ffffff;
}

QHeaderView::section {
    background: ${ELEVATED};
    border: 1px solid ${DIVIDER};
    padding: 4px 6px;
    font-weight: 500;
}

QHeaderView::section:first {
    border-left: none;
}

/* ————————————————————————————————————————
   Menus & Tooltips
   ———————————————————————————————————————— */

QMenu {
    background: ${ELEVATED};
    border: 1px solid ${DIVIDER};
}

QMenu::item {
    padding: 6px 24px 6px 24px;
}

QMenu::item:selected {
    background: ${ACCENT_DARK};
    color: #ffffff;
}

QToolTip {
    color: #ffffff;
    background: ${ACCENT_DARK};
    border: 1px solid ${ACCENT};
}

/* ————————————————————————————————————————
   Progress Bar
   ———————————————————————————————————————— */

QProgressBar {
    background: ${ELEVATED};
    border: 1px solid ${DIVIDER};
    border-radius: 4px;
    text-align: center;
}

QProgressBar::chunk {
    background: ${ACCENT};
}

/* ————————————————————————————————————————
   Status Bar
   ———————————————————————————————————————— */

QStatusBar {
    background: ${ELEVATED};
    border-top: 1px solid ${DIVIDER};
}

QStatusBar QLabel {
    border: none;
    padding: 0px 8px;
}

/* ————————————————————————————————————————
   Dialogs
   ———————————————————————————————————————— */

QDialog {
    background: ${BASE};
}

QMessageBox QLabel {
    color: ${TEXT_PRIMARY};
}

/* ————————————————————————————————————————
   Miscellaneous
   ———————————————————————————————————————— */

#ShadowContainer {
    background: ${ELEVATED};
    border-radius: 8px;
    border: 1px solid rgba(0, 0, 0, 0.5);
}

/* Splitters */
QSplitter::handle {
    background-color: ${DIVIDER};
}

QSplitter::handle:hover {
    background-color: ${ACCENT_LIGHT};
}
