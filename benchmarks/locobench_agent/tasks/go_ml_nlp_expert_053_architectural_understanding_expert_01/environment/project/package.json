{
  "//": "EchoPulse package manifest — Node side-car that powers UI tooling, linting, documentation generation and release automation for the Go backend.",
  "name": "@echopulse/platform",
  "version": "0.8.0",
  "private": true,
  "description": "EchoPulse — Real-Time Social Signal Processing Platform: developer tooling & front-end workspace.",
  "author": "EchoPulse Engineering <eng@echopulse.ai>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/echopulse/echopulse.git"
  },
  "keywords": [
    "go",
    "ml",
    "nlp",
    "grpc",
    "kafka",
    "realtime",
    "social",
    "platform"
  ],
  "engines": {
    "node": ">=16.14.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "preinstall": "npx npm-force-resolutions",
    "prepare": "husky install",
    "postinstall": "tailwindcss -i ./web/css/input.css -o ./web/css/output.css --minify",
    "lint": "golangci-lint run ./...",
    "test": "go test -race -cover -coverprofile=coverage.out ./...",
    "coverage:html": "go tool cover -html=coverage.out",
    "build": "go build -trimpath -ldflags='-s -w' -o ./bin/echopulse ./cmd/server",
    "start": "go run ./cmd/server",
    "proto:lint": "buf lint",
    "proto:generate": "buf generate && go vet ./pkg/gen/...",
    "docs:generate": "swagger generate spec -o api/openapi.yaml --scan-models",
    "ui:dev": "vite --config web/vite.config.ts",
    "ui:build": "vite build --config web/vite.config.ts",
    "docker:build": "docker build -t ghcr.io/echopulse/echopulse:latest .",
    "benchmark": "go test -run=^$ -bench=. -benchmem ./...",
    "release": "goreleaser release --clean",
    "ci": "npm run lint && npm run test && npm run build"
  },
  "lint-staged": {
    "*.go": [
      "golines -m 120 --base-formatter gofumpt",
      "goimports -w"
    ],
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "protoOut": "./pkg/gen",
    "apiOut": "./api/openapi.yaml"
  },
  "dependencies": {
    "grpc-web": "^1.4.2",
    "protobufjs": "^7.2.0",
    "swagger-ui-dist": "^5.0.0",
    "concurrently": "^7.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "eslint": "^8.30.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "npm-force-resolutions": "^0.0.10",
    "prettier": "^2.8.1",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4",
    "vite": "^4.0.0"
  },
  "resolutions": {
    "**/ansi-regex": "^5.0.1"
  }
}