#!/bin/bash
# Installation script for Claude Code CLI
# Template variables:
# - claude_version: Version to install (e.g., "1.0.38" or "latest")

set -e

echo "Installing Claude Code CLI..."

# Check if Node.js is available
if ! command -v node &> /dev/null; then
    echo "ERROR: Node.js 18+ is required but not found. Install Node.js first."
    exit 1
fi

# Check Node version
NODE_VERSION=$(node -v | cut -d'v' -f2 | cut -d'.' -f1)
if [ "$NODE_VERSION" -lt 18 ]; then
    echo "ERROR: Node.js 18+ is required. Current version: $(node -v)"
    exit 1
fi

# Install Claude Code globally
npm install -g @anthropic-ai/claude-code

# Verify installation
if command -v claude &> /dev/null; then
    echo "âœ“ Claude Code CLI installed successfully"
    claude -v
else
    echo "ERROR: Claude Code installation failed"
    exit 1
fi

# Verify API key is set
if [ -z "$ANTHROPIC_API_KEY" ]; then
    echo "WARNING: ANTHROPIC_API_KEY environment variable not set"
    echo "Set it before running Claude Code: export ANTHROPIC_API_KEY=sk-..."
fi

echo "Installation complete!"
